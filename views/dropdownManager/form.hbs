<h2 class="text-center">Dropdown Manager - {{formName}}</h2>
<h4>Filtering</h4>
<div class="row">
  <div class="col">
    <form class="mb-0" method="GET">
      <select
        class="form-select-sm"
        id="filterCategory"
        title="filterSelect"
        name="filterCategory"
      >
        <option disabled selected>Filter By...</option>
        <option value="Dropdown Title">Dropdown Title</option>
        <option value="Dropdown Value">Dropdown Value</option>
      </select>
      <!-- filterValue input -->
      <input
        name="filterValue"
        id="filterValue"
        class="form-control-sm"
        pattern="^[^\x27\x22;=_()*&%$#!<>\/\^\\]*$"
        title="No special characters!"
        placeholder="Search..."
        value="{{filterValue}}"
      />
      <button
        id="filterButton"
        class="btn btn-sm btn-primary"
        type="submit"
      >Search</button>
      <a
        id="filterButton"
        href="/dropdownManager/form/{{dropdownFormID}}"
        class="btn btn-sm btn-secondary"
        type="submit"
      >Reset</a>
    </form>
  </div>
</div>
<div class="row">
  <div class="col pb-1">
    {{#if queryCount}}
      <strong>{{queryCount}}</strong>
    {{/if}}
  </div>
</div>

<!-- Table -->
<div class="row">
  <div class="col-12">
    <table class="sortable table table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th>Dropdown Title</th>
          <th>Dropdown Value</th>
          <th>isDisabled</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each data}}
          <tr>
            <td>{{this.dropdownTitle}}</td>
            <td>{{this.dropdownValue}}</td>
            <td>{{this.isDisabled}}</td>
            <td><a
                href="/dropdownManager/form/{{dropdownFormID}}/enable/{{this.dropdownID}}"
                class="btn btn-sm btn-success"
              >Enable</a>
              <a
                href="/dropdownManager/form/{{dropdownFormID}}/disable/{{this.dropdownID}}"
                class="btn btn-sm btn-secondary"
              >Disable</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <nav id="pagination">
      <ul class="pagination pagination-sm">
        {{#if paginate.hasPreviousPages}}
          <li class="page-item"><a
              class="page-link"
              href="{{prev}}"
            >Prev</a></li>
        {{/if}}
        {{#each pages}}
          <li class="page-item"><a
              class="page-link"
              href="{{this.url}}"
            >{{this.number}}</a></li>
        {{/each}}
        {{#if hasMorePages}}
          <li class="page-item"><a
              class="page-link"
              href="{{paginate.href}}"
            >Next</a></li>
        {{/if}}
      </ul>
    </nav>
  </div>
</div>
{{#includes auth "Admin"}}
  <!-- Add new dropdown value -->
  <div class="row">
    <div class="col">
      <form method="POST">
        <div class="row">
          <h4>Add a new dropdown menu</h4>
          <hr />
          <div class="col-sm-6">
            <label for="Dropdown Title" class="form-label title-text">Dropdown
              Title</label>
            <input
              name="dropdownTitle"
              class="form-control"
              placeholder="Title of dropdown menu..."
              type="text"
              pattern="[^()/><\][\\\x22,;|]+"
              title="No special characters!"
              value="{{lastEnteredDropdownTitle}}"
              required
            />
          </div>
          <div class="col-sm-6">
            <label for="Dropdown Value" class="form-label title-text">Dropdown
              Value</label>
            <input
              name="dropdownValue"
              class="form-control"
              placeholder="Value/option in dropdown menu..."
              type="text"
              pattern="[^()/><\][\\\x22,;|]+"
              title="No special characters!"
              required
            />
          </div>
        </div>
        <div class="row">
          <div class="col">
            <button
              id="submitButton"
              class="btn btn-primary mt-2"
              type="submit"
            >Submit</button>
          </div>
        </div>
      </form>
    </div>
  </div>
{{/includes}}