<h2 class="text-center">{{formName}}</h2>
<div class="content">
  {{#if queryCount}}
    <div>
      <strong>{{queryCount}}</strong>
    </div>
  {{/if}}
  <!-- Table -->
  <div class="row">
    <div class="col-12">
      <table class="sortable table table-bordered table-striped table-hover">
        <thead>
          <tr>
            <th>Dropdown ID</th>
            <th>Dropdown Title</th>
            <th>Dropdown Value</th>
            <th>isDisabled</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each data}}
            <tr>
              <td>{{this.dropdownID}}</td>
              <td>{{this.dropdownTitle}}</td>
              <td>{{this.value}}</td>
              <td>{{this.isDisabled}}</td>
              <td><a
                  href="/dropdownManager/enable/{{this.dropdownID}}"
                  class="btn btn btn-success"
                >Enable</a>
                <a
                  href="/dropdownManager/disable/{{this.dropdownID}}"
                  class="btn btn-secondary"
                >Disable</a></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
      <nav id="pagination">
        <ul class="pagination pagination-sm">
          {{#if paginate.hasPreviousPages}}
            <li class="page-item"><a
                class="page-link"
                href="{{prev}}"
              >Prev</a></li>
          {{/if}}
          {{#each pages}}
            <li class="page-item"><a
                class="page-link"
                href="{{this.url}}"
              >{{this.number}}</a></li>
          {{/each}}
          {{#if hasMorePages}}
            <li class="page-item"><a
                class="page-link"
                href="{{paginate.href}}"
              >Next</a></li>
          {{/if}}
        </ul>
      </nav>
    </div>
  </div>
  <!-- Add new dropdown value -->
  <div class="row">
    <div class="col">
      <form method="POST">
        <div class="row">
          <div class="col-sm-6">
            <label for="Dropdown Title" class="form-label title-text">Dropdown
              Title</label>
            <input
              name="dropdownTitle"
              class="form-control"
              placeholder="Title of dropdown menu..."
              type="text"
              pattern="[^()/><\][\\\x22,;|]+"
              title="No special characters!"
              required
            />
          </div>
          <div class="col-sm-6">
            <label for="Dropdown Value" class="form-label title-text">Dropdown
              Value</label>
            <input
              name="value"
              class="form-control"
              placeholder="Value/option in dropdown menu..."
              type="text"
              pattern="[^()/><\][\\\x22,;|]+"
              title="No special characters!"
              required
            />
          </div>
        </div>
        <div class="row">
          <div class="col">
            <button
              id="submitButton"
              class="btn btn-primary"
              type="submit"
            >Submit</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>