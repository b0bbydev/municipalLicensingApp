<h2 class="text-center">Dropdown Manager</h2>
<div class="content">
  <div class="row">
    <div class="col">
      <a href="#" class="btn btn-sm btn-primary" id="addFormButton">Add Form</a>
    </div>
  </div>
  <!-- Table -->
  <div class="row">
    <div class="col-12">
      <table class="sortable table table-bordered table-striped table-hover">
        <thead>
          <tr>
            <th>Dropdown Form ID</th>
            <th>Form Name</th>
          </tr>
        </thead>
        <tbody>
          {{#each data}}
            <tr>
              <td><a
                  href="/dropdownManager/form/{{this.dropdownFormID}}"
                  id="ownerLink"
                >{{this.dropdownFormID}}</a></td>
              <td>{{this.formName}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <!-- check for error messages in the session -->
  {{#if message}}
    <div class="alert alert-danger">
      {{message}}
    </div>
  {{/if}}
</div>