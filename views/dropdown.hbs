<h2 class="text-center">Forms</h2>
<div class="content">
   <ul>
      <a class="panel panel-heading infoPanel" href="#">
         <p>
            <i class="icon-blue bi bi-card-list"></i> Example Form 1
         </p>
      </a>
      <a class="panel panel-heading infoPanel" href="#">
         <p>
            <i class="icon-blue bi bi-card-list"></i> Example Form 2
         </p>
      </a>
   </ul>
   <!-- Table -->
   <div class="row">
      <div class="col-12">
         <table class="table table-striped table-hover">
            <thead>
               <tr>
                  <th>Dropdown ID</th>
                  <th>Value</th>
                  <th>isDisabled</th>
                  <th>Created At</th>
                  <th>Actions</th>
               </tr>
            </thead>
            <tbody>
               {{#each data}}
               <tr>
                  <td>{{this.dropdownID}}</td>
                  <td>{{this.value}}</td>
                  <td>{{this.isDisabled}}</td>
                  <td>{{this.createdAt}}</td>
                  <td><a href="/dropdown/enable/{{this.dropdownID}}" class="btn btn-success">Enable</a> <a href="/dropdown/disable/{{this.dropdownID}}" class="btn btn-secondary">Disable</a></td>
               </tr>
               {{/each}}
            </tbody>
         </table>
      </div>
   </div>

   <!-- check for error messages in the session -->
   {{#if message}}
   <div class="alert alert-danger">
      {{message}}
   </div>
   {{/if}}

   <!-- Add new dropdown value -->
   <h4>Add A New Value</h4>
   <form method="POST">
      <div class="row">
         <div class="col-sm-2">
            <label for="Dropdown Value" class="form-label"></label>
            <input name="value" class="form-control" placeholder="New Value..." type="text" pattern="[^()/><\][\\\x22,;|]+" title="No special characters!" required>
         </div>
      </div>
      <button class="btn btn-primary" type="submit">Submit</button>
   </form>
   
   <div class="row">
      <h4>Test Dropdown</h4>
      <div class="row">
         <div class="col-sm-2">
            <select name="dropdown" class="form-select" id="dropdown">
               <option value="default" disabled selected>select a value...</option>
               {{#each data}}
               <option value="{{this.dropdownID}}" {{#if this.isDisabled}} disabled {{/if}}>{{this.value}}</option>
               {{/each}}
            </select>
         </div>
      </div>
   </div>
</div>