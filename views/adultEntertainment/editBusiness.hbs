<h2 class="text-center mt-1">Edit Business</h2>
<form class="row g-5 m-auto" method="POST">
  <div class="col-md-7 m-auto mt-5">
    <!-- check for error messages in the session -->
    {{#if message}}
      <div class="alert alert-danger">
        {{message}}
      </div>
    {{/if}}
    <h4>Business Information</h4>
    <hr />
    <div class="row">
      <!-- Business Name -->
      <div class="col-sm-4">
        <label for="Business Name" class="form-label">Business Name*</label>
        <input
          type="text"
          placeholder="Business Name"
          class="form-control"
          name="businessName"
          pattern="[^()/><\][\\\x22;|]+"
          title="No special characters!"
          value="{{businessInfo.businessName}}"
          maxlength="30"
          required
        />
      </div>
      <!-- Street Number -->
      <div class="col-sm-4">
        <label for="Street Number" class="form-label">Street Number</label>
        <input
          type="number"
          placeholder="Street Number"
          class="form-control"
          name="streetNumber"
          value="{{businessInfo.streetNumber}}"
        />
      </div>
      <!-- Street Name -->
      <div class="col-sm-4">
        <label for="Street Name" class="form-label">Street Name</label>
        <select
          class="form-select"
          id="streetName"
          title="streetName"
          name="streetName"
          value="{{businessInfo.streetName}}
        >
          <option disabled selected>Street Name...</option>
          {{#each dropdownValues}}
            {{#if this.isDisabled}}
              <option
                value="{{this.dropdownValue}}"
                disabled
              >{{this.dropdownValue}}</option>
            {{else}}
              <option
                value="{{this.dropdownValue}}"
              >{{this.dropdownValue}}</option>
            {{/if}}
          {{/each}}
        </select>
      </div>
    </div>
    <div class="row">
      <!-- PO Box/Apt/RR -->
      <div class="col-sm-4">
        <label for="PO Box/Apt/RR" class="form-label">PO Box/Apt/RR</label>
        <input
          type="text"
          placeholder="PO Box/Apt/RR"
          class="form-control"
          name="poBoxAptRR"
          pattern="[^()/><\][\\\x22,;|]+"
          title="No special characters!"
          value="{{businessInfo.poBoxAptRR}}"
          maxlength="25"
        />
      </div>
      <!-- Town -->
      <div class="col-sm-4">
        <label for="Town" class="form-label">Town</label>
        <input
          type="text"
          placeholder="Town"
          class="form-control"
          name="town"
          pattern="[^()/><\][\\\x22,;|]+"
          title="No special characters!"
          value="{{businessInfo.town}}"
          maxlength="30"
        />
      </div>
      <!-- Postal Code -->
      <div class="col-sm-4">
        <label for="Postal Code" class="form-label">Postal Code</label>
        <input
          type="text"
          placeholder="Postal Code"
          class="form-control"
          name="postalCode"
          pattern="[^()/><\][\\\x22,;|]+"
          title="No special characters!"
          value="{{businessInfo.postalCode}}"
          maxlength="15"
        />
      </div>
    </div>
    <div class="row">
      <!-- Owner Name -->
      <div class="col-sm-4">
        <label for="Owner Name" class="form-label">Owner Name</label>
        <input
          type="text"
