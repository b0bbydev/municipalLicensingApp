<h2 class="text-center mt-1">Edit Guideline</h2>
<form class="row g-5 m-auto" method="POST">
  <div class="col-md-7 m-auto mt-5">
    <!-- check for error messages in the session -->
    {{#if message}}
      <div class="alert alert-danger">
        {{message}}
      </div>
    {{/if}}
    <h4>Guideline Information</h4>
    <hr />
    <div class="row">
      <!-- Guideline Name -->
      <div class="col-sm-6">
        <label for="Guideline Name" class="form-label">Guideline Name</label>
        <input
          type="text"
          class="form-control"
          placeholder="Guideline Name"
          name="guidelineName"
          pattern="[^()/><\][\\\x22;|]+"
          title="No special characters!"
          value="{{guidelineInfo.guidelineName}}"
          maxlength="30"
          required
        />
      </div>
      <!-- Approval Date -->
      <div class="col-sm-6">
        <label for="Approval Date" class="form-label">Approval Date</label>
        <input
          type="date"
          class="form-control"
          placeholder="Approval Date"
          name="approvalDate"
          value="{{guidelineInfo.approvalDate}}"
        />
      </div>
    </div>
    <div class="row">
      <!-- Last Review Date -->
      <div class="col-sm-6">
        <label for="Last Review Date" class="form-label">Last Review Date</label>
        <input
          type="date"
          class="form-control"
          placeholder="Last Review Date"
          name="lastReviewDate"
          value="{{guidelineInfo.lastReviewDate}}"
        />
      </div>
      <!-- Scheduled Review Date -->
      <div class="col-sm-6">
        <label for="Scheduled Review Date" class="form-label">Scheduled Review
          Date</label>
        <input
          type="date"
          class="form-control"
          placeholder="Scheduled Review Date"
          name="scheduledReviewDate"
          value="{{guidelineInfo.scheduledReviewDate}}"
        />
      </div>
    </div>
    <div class="row">
      <!-- Date Amended -->
      <div class="col-sm-6">
        <label for="Date Amended" class="form-label">Date Amended</label>
        <input
          type="date"
          class="form-control"
          placeholder="Date Amended"
          name="dateAmended"
          value="{{guidelineInfo.dateAmended}}"
        />
      </div>
      <!-- Status -->
      <div class="col-sm-6">
        <label for="Status" class="form-label">Status</label>
        <select class="form-select" name="status">
          <option disabled selected>Status...</option>
          {{#if guidelineInfo.status}}
            <option
              value="{{guidelineInfo.status}}"
              selected
              disabled
            >{{guidelineInfo.status}}</option>
          {{/if}}
          {{#each statusDropdownValues}}
            {{#if this.isDisabled}}
              <option
                value="{{this.dropdownValue}}"
                disabled
              >{{this.dropdownValue}}</option>
            {{else}}
              <option
                value="{{this.dropdownValue}}"
              >{{this.dropdownValue}}</option>
            {{/if}}
          {{/each}}
        </select>
      </div>
    </div>
    <div class="row">
      <!-- Notes -->
      <div class="col">
        <label for="Notes" class="form-label">Notes</label>
        <textarea
          type="text"
          name="notes"
          class="form-control"
          pattern="[^()/><\][\\\x22;|]+"
          title="No special characters!"
          maxlength="255"
        >{{guidelineInfo.notes}}</textarea>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <button
          id="submitButton"
          class="btn btn-primary mt-2"
          type="submit"
        >Submit</button>
      </div>
    </div>
  </div>
</form>