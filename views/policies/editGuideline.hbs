<h2>Edit Guideline</h2>
<div class="content">
  <form class="row g-2" id="form" method="POST">
    <!-- check for error messages in the session -->
    {{#if message}}
      <div class="alert alert-danger">
        {{message}}
      </div>
    {{/if}}
    <h4>Guideline Information</h4>
    <hr />
    <!-- Guideline Name -->
    <div class="row">
      <div class="col-sm-6">
        <label for="Guideline Name" class="form-label">Guideline Name</label>
        <input
          type="text"
          class="form-control"
          placeholder="Guideline Name"
          name="guidelineName"
        />
      </div>
      <!-- Approval Date -->
      <div class="col-sm-6">
        <label for="Approval Date" class="form-label">Approval Date</label>
        <input
          type="date"
          class="form-control"
          placeholder="Approval Date"
          name="approvalDate"
        />
      </div>
    </div>
    <div class="row">
      <div class="col">
        <button
          id="submitButton"
          class="btn btn-primary"
          type="submit"
        >Submit</button>
      </div>
    </div>
  </form>
</div>