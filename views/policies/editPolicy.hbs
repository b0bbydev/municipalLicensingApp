<h2>Edit Policy</h2>
<div class="content">
  <form class="row g-2" id="form" method="POST">
    <!-- check for error messages in the session -->
    {{#if message}}
      <div class="alert alert-danger">
        {{message}}
      </div>
    {{/if}}
    <h4>Policy Information</h4>
    <hr />
    <!-- Policy Number -->
    <div class="row">
      <div class="col-sm-6">
        <label for="Policy Number" class="form-label">Policy Number</label>
        <input
          type="number"
          class="form-control"
          placeholder="Policy Number"
          name="policyNumber"
          value="{{policyInfo.policyNumber}}"
        />
      </div>
      <!-- Policy Name -->
      <div class="col-sm-6">
        <label for="Policy Name" class="form-label">Policy Name</label>
        <input
          type="text"
          class="form-control"
          placeholder="Policy Name"
          name="policyName"
          pattern="[^()/><\][\\\x22,;|]+"
          title="No special characters!"
          maxlength="40"
          value="{{policyInfo.policyName}}"
        />
      </div>
    </div>
    <div class="row">
      <!-- COW Date -->
      <div class="col-sm-6">
        <label for="COW Date" class="form-label">COW Date</label>
        <input
          type="date"
          class="form-control"
          placeholder="COW Date"
          name="cowDate"
          value="{{policyInfo.cowDate}}"
          required
        />
      </div>
      <div class="col-sm-6">
        <label for="Council Resolution" class="form-label">Council Resolution</label>
        <input
          type="text"
          class="form-control"
          placeholder="Council Resolution"
          name="councilResolution"
          pattern="[^()/><\][\\\x22,;|]+"
          title="No special characters!"
          maxlength="40"
          value="{{policyInfo.councilResolution}}"
        />
      </div>
    </div>
    <div class="row">
      <!-- Date Approved -->
      <div class="col-sm-4">
        <label for="Date Approved" class="form-label">Date Approved</label>
        <input
          type="date"
          class="form-control"
          placeholder="Date Approved"
          name="dateApproved"
          value="{{policyInfo.dateApproved}}"
          required
        />
      </div>
      <!-- Date Amended -->
      <div class="col-sm-4">
        <label for="Date Amended" class="form-label">Date Amended</label>
        <input
          type="date"
          class="form-control"
          placeholder="Date Amended"
          name="dateAmended"
          value="{{policyInfo.dateAmended}}"
          required
        />
      </div>
      <!-- Date Effective -->
      <div class="col-sm-4">
        <label for="Date Effective" class="form-label">Date Effective</label>
        <input
          type="date"
          class="form-control"
          placeholder="Date Effective"
          name="dateEffective"
          value="{{policyInfo.dateEffective}}"
          required
        />
      </div>
    </div>
    <div class="row">
      <div class="col-sm-4">
        <label for="Category" class="form-label">Category</label>
        <select class="form-select" name="category">
          <option disabled selected>Category...</option>
          {{#each categoryDropdownValues}}
            {{#if this.isDisabled}}
              <option
                value="{{this.dropdownValue}}"
                disabled
              >{{this.dropdownValue}}</option>
            {{else}}
              <option
                value="{{this.dropdownValue}}"
              >{{this.dropdownValue}}</option>
            {{/if}}
          {{/each}}
        </select>
      </div>
      <!-- Last Review Date -->
      <div class="col-sm-4">
        <label for="Last Review Date" class="form-label">Last Review Date</label>
        <input
          type="date"
          class="form-control"
          placeholder="Last Review Date"
          name="lastReviewDate"
          value="{{policyInfo.lastReviewDate}}"
          required
        />
      </div>
      <!-- Scheduled Review Date -->
      <div class="col-sm-4">
        <label for="Scheduled Review Date" class="form-label">Scheduled Review
          Date</label>
        <input
          type="date"
          class="form-control"
          placeholder="Scheduled Review Date"
          name="scheduledReviewDate"
          value="{{policyInfo.scheduledReviewDate}}"
          required
        />
      </div>
    </div>
    <div class="row">
      <!-- Division -->
      <div class="col-sm-6">
        <label for="Division" class="form-label">Division</label>
        <input
          type="text"
          class="form-control"
          placeholder="Division"
          name="division"
          pattern="[^()/><\][\\\x22,;|]+"
          title="No special characters!"
          maxlength="40"
          value="{{policyInfo.division}}"
        />
      </div>
      <!-- Authority -->
      <div class="col-sm-6">
        <label for="Authority" class="form-label">Authority</label>
        <select class="form-select" name="authority">
          <option disabled selected>Authority...</option>
          {{#each authorityDropdownValues}}
            {{#if this.isDisabled}}
              <option
                value="{{this.dropdownValue}}"
                disabled
              >{{this.dropdownValue}}</option>
            {{else}}
              <option
                value="{{this.dropdownValue}}"
              >{{this.dropdownValue}}</option>
            {{/if}}
          {{/each}}
        </select>
      </div>
    </div>
    <div class="row">
      <!-- Administrator -->
      <div class="col-sm-6">
        <label for="Administrator" class="form-label">Administrator</label>
        <input
          type="text"
          class="form-control"
          placeholder="Administrator"
          name="administrator"
          pattern="[^()/><\][\\\x22,;|]+"
          title="No special characters!"
          maxlength="40"
          value="{{policyInfo.administrator}}"
        />
      </div>
      <!-- Status -->
      <div class="col-sm-6">
        <label for="Status" class="form-label">Status</label>
        <select class="form-select" name="status">
          <option disabled selected>Status...</option>
          {{#each statusDropdownValues}}
            {{#if this.isDisabled}}
              <option
                value="{{this.dropdownValue}}"
                disabled
              >{{this.dropdownValue}}</option>
            {{else}}
              <option
                value="{{this.dropdownValue}}"
              >{{this.dropdownValue}}</option>
            {{/if}}
          {{/each}}
        </select>
      </div>
    </div>
    <!-- Notes -->
    <div class="row">
      <div class="col">
        <label for="Notes" class="form-label">Notes</label>
        <textarea
          type="text"
          name="notes"
          class="form-control"
          pattern="[^()/><\][\\\x22;|]+"
          title="No special characters!"
          maxlength="255"
        >{{policyInfo.notes}}</textarea>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <button
          id="submitButton"
          class="btn btn-primary"
          type="submit"
        >Submit</button>
      </div>
    </div>
  </form>
</div>