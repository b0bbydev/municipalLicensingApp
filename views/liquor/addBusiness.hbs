          type="text"
          placeholder="Business Name"
          class="form-control"
          name="businessName"
          pattern="[^()/><\][\\\x22;|]+"
          title="No special characters!"
          value="{{formData.businessName}}"
          maxlength="50"
          required
        />
      </div>
      <!-- Business Phone -->
      <div class="col-sm-6">
        <label for="Business Phone" class="form-label">Business Phone</label>
        <input
          type="text"
