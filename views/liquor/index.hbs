<h2 class="text-center mt-1">Liquor Licenses</h2>
<h4>Filtering</h4>
<form class="mb-0" method="GET">
  <select
    class="form-select-sm"
    id="filterCategory"
    title="Category To Filter By"
    name="filterCategory"
    required
  >
    {{#if filterCategory}}
      <option value="{{filterCategory}}" selected>{{filterCategory}}</option>
    {{else}}
      <option value="" disabled selected>Filter By...</option>
    {{/if}}
    {{#each filterOptions}}
      {{#if this.isDisabled}}
        <option
          value="{{this.dropdownValue}}"
          disabled
        >{{this.dropdownValue}}</option>
      {{else}}
        <option value="{{this.dropdownValue}}">{{this.dropdownValue}}</option>
      {{/if}}
    {{/each}}
  </select>
  <!-- filterValue input -->
  <input
    name="filterValue"
    id="filterValue"
    class="form-control-sm"
    pattern="^[^\x27\x22;=_()*&%$#!<>\/\^\\]*$"
    title="No special characters!"
    placeholder="Search..."
    value="{{filterValue}}"
  />
  <button
    id="filterButton"
    class="btn btn-sm btn-primary"
    type="submit"
  >Search</button>
  <a
    id="filterButton"
    href="/liquor"
    class="btn btn-sm btn-secondary"
    type="submit"
  >Reset</a>
</form>
<div class="row">
  <div class="col mt-1">
    <a
      class="user-select-none"
      id="historyLink"
      data-bs-toggle="modal"
      data-bs-target="#historyModal"
    >View Address History</a>
  </div>
</div>
<div class="row">
  <div class="col mb-1">
    <h4 class="mb-0 mt-1">Businesses</h4>
    {{#if queryCount}}
      <strong class="float-start mt-2">{{queryCount}}</strong>
    {{/if}}
    <a href="/liquor/addBusiness" class="btn btn-sm btn-primary float-end">Add A
      Business</a>
  </div>
</div>

<!-- check for error messages in the session -->
{{#if message}}
  <div class="alert alert-danger">
    {{message}}
  </div>
{{/if}}

<!-- Table -->
<table
  class="table table-responsive table-bordered table-striped table-hover sortable"
>
  <thead>
    <tr>
      <th>Business Name</th>
      <th>Business Phone</th>
      <th>Address</th>
      <th>Contact Name</th>
      <th>Contact Phone</th>
      <th>Date Started</th>
      <th>Notes</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    {{#each data}}
      <tr>
        <td>{{this.businessName}}</td>
        <td>{{this.businessPhone}}</td>
        {{#each liquorBusinessAddresses}}
          <td>{{this.streetNumber}}
            {{this.streetName}},
            {{this.town}}
            {{this.postalCode}}</td>
        {{/each}}
        <td>{{this.contactName}}</td>
        <td>{{this.contactPhone}}</td>
        <td>{{this.dateStarted}}</td>
        <td>{{this.notes}}</td>
        <td style="width: 12%;"><a
            class="btn btn-sm btn-secondary"
            href="/liquor/editBusiness/{{this.liquorBusinessID}}"
          >Edit</a>
          |
          <a
            class="btn btn-sm btn-secondary"
            data-bs-toggle="modal"
            data-bs-target="#liquorModal-{{this.liquorBusinessID}}"
          >Documentation</a></td>
      </tr>
      <!-- Modal -->
      <div
        class="modal fade"
        id="liquorModal-{{this.liquorBusinessID}}"
        tabindex="-1"
        aria-labelledby="liquorModal"
        aria-hidden="true"
      >
        <form method="POST">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Documentation</h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                <div class="row">
                  <div class="col">
                    <strong>Application Type:</strong>
                  </div>
                  <div class="col float-end">
                    <p>{{this.applicationType}}</p>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <strong>Fee Receieved:</strong>
                  </div>
                  <div class="col float-end">
                    <p>{{this.feeReceived}}</p>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <strong>Municipal Information Signed:</strong>
                  </div>
                  <div class="col float-end">
                    <p>{{this.municipalInformationSigned}}</p>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <strong>Municipal Information Sent To AGCO:</strong>
                  </div>
                  <div class="col float-end">
                    <p>{{this.municipalInformationSentToAGCO}}</p>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <strong>Fire Approval Received:</strong>
                  </div>
                  <div class="col float-end">
                    <p>{{this.fireApprovalReceived}}</p>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <strong>Fire Sent To AGCO:</strong>
                  </div>
                  <div class="col float-end">
                    <p>{{this.fireSentToAGCO}}</p>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <strong>Planning Approval Received:</strong>
                  </div>
                  <div class="col float-end">
                    <p>{{this.planningApprovalReceived}}</p>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <strong>Planning Sent To AGCO:</strong>
                  </div>
                  <div class="col float-end">
                    <p>{{this.planningSentToAGCO}}</p>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <strong>SMDHU Approval Received:</strong>
                  </div>
                  <div class="col float-end">
                    <p>{{this.smdhuApprovalReceived}}</p>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <strong>SMDHU Sent To AGCO:</strong>
                  </div>
                  <div class="col float-end">
                    <p>{{this.smdhuSentToAGCO}}</p>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <strong>Building Approval Received:</strong>
                  </div>
                  <div class="col float-end">
                    <p>{{this.buildingApprovalReceived}}</p>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <strong>Building Sent To AGCO:</strong>
                  </div>
                  <div class="col float-end">
                    <p>{{this.buildingSentToAGCO}}</p>
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <strong>License Approved:</strong>
                  </div>
                  <div class="col float-end">
                    <p>{{this.licenseApproved}}</p>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >Close</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    {{/each}}
  </tbody>
</table>
<!-- History Modal -->
<div
  class="modal fade"
  id="historyModal"
  tabindex="-1"
  aria-labelledby="History Modal"
  aria-hidden="true"
>
  <form method="POST">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">History Search</h5>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <label for="Business Name" class="form-label">Enter the name of the
            business</label>
          <input
            list="businesses"
            class="form-control"
            placeholder="Business Name"
            name="businessName"
            required
          />
          <datalist id="businesses">
            {{#each data}}
              <option
                value="{{this.businessName}}"
              >{{this.businessName}}</option>
            {{/each}}
          </datalist>
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >Close</button>
          <button type="submit" class="btn btn-primary">Search</button>
        </div>
      </div>
    </div>
  </form>
</div>