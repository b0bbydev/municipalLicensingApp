<div class="container d-flex align-items-center flex-column">
  <h2>Login</h2>
  <form method="POST">
    <div class="loginForm">
      <label>Username</label>
      <input
        class="form-control"
        name="username"
        placeholder="Username"
        type="text"
      />
      <label>Password</label>
      <input
        class="form-control"
        name="password"
        placeholder="*********"
        type="password"
      />
      <div class="row align-items-center">
        <div class="col">
          <button id="loginButton" class="btn btn-success">Login</button>
        </div>
        <div class="col">
          <p class="text-nowrap" id="accessHelper">Don't have an account?
            <a href="/register">Register here</a>
          </p>
        </div>
      </div>
    </div>
  </form>
</div>