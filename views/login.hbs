<div class="container d-flex align-items-center flex-column">
  <h2>Login</h2>
  <form method="POST">
    <div class="loginForm">
      <label>Username</label>
      <input
        class="form-control"
        name="username"
        placeholder="Username"
        type="text"
      />
      <label>Password</label>
      <input
        class="form-control"
        name="password"
        placeholder="*********"
        type="password"
      />
      <button id="loginButton" class="btn btn-success">Login</button>
    </div>
  </form>
</div>