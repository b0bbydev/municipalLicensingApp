<div class="container d-flex align-items-center flex-column">
  <h2 id="dogLicenseTitle">New Dog Tag License</h2>
</div>

<form class="row g-2" id="addLicenseForm" method="POST">
  <h4>Owner Information</h4>
  <hr />
  <div class="row">
    <!-- First Name -->
    <div class="col-sm-6">
      <label for="First Name" class="form-label">First Name</label>
      <input
        type="text"
        placeholder="First Name"
        class="form-control"
        name="firstName"
      />
    </div>
    <!-- Last Name -->
    <div class="col-sm-6">
      <label for="Last Name" class="form-label">Last Name</label>
      <input
        type="text"
        placeholder="Last Name"
        class="form-control"
        name="lastName"
      />
    </div>
  </div>
  <div class="row">
    <!-- PO Box/Apt/RR -->
    <div class="col-sm-6">
      <label for="PO Box/Apt/RR " class="form-label">PO Box/Apt/RR</label>
      <input
        type="text"
        class="form-control"
        placeholder="PO Box/Apt/RR"
        name="poBoxAptRR"
      />
    </div>
    <!-- Address -->
    <div class="col-sm-6">
      <label for="Address" class="form-label">Address</label>
      <input
        type="text"
        class="form-control"
        placeholder="Address"
        name="address"
      />
    </div>
  </div>
  <div class="row">
    <!-- Town -->
    <div class="col-sm-6">
      <label for="Town" class="form-label">Town</label>
      <input type="text" class="form-control" placeholder="Town" name="town" />
    </div>
    <!-- Postal Code -->
    <div class="col-sm-6">
      <label for="Postal Code" class="form-label">Postal Code</label>
      <input
        type="text"
        class="form-control"
        placeholder="Postal Code"
        name="postalCode"
      />
    </div>
  </div>
  <div class="row">
    <!-- Home Phone -->
    <div class="col-sm-4">
      <label for="Home Phone" class="form-label">Home Phone</label>
      <input
        type="text"
        class="form-control"
        placeholder="Home Phone"
        name="homePhone"
      />
    </div>
    <!-- Cell Phone -->
    <div class="col-sm-4">
      <label for="Cell Phone" class="form-label">Cell Phone</label>
      <input
        type="text"
        class="form-control"
        placeholder="Cell Phone"
        name="cellPhone"
      />
    </div>
    <!-- Work Phone -->
    <div class="col-sm-4">
      <label for="Work Phone" class="form-label">Work Phone</label>
      <input
        type="text"
        class="form-control"
        placeholder="Work Phone"
        name="workPhone"
      />
    </div>
  </div>
  <!-- Email -->
  <div class="row">
    <div class="col-sm-12">
      <label for="Email" class="form-label">Email</label>
      <input
        type="text"
        class="form-control"
        placeholder="Email"
        name="email"
      />
    </div>
  </div>
  <h4>Dog Information</h4>
  <hr />
  <div class="row">
    <div class="col-sm-6">
      <label for="Tag Number" class="form-label">Tag Number</label>
      <input type="text" class="form-control" placeholder="Tag Number" />
    </div>
    <div class="col-sm-6">
      <label for="Dog Name" class="form-label">Dog Name</label>
      <input type="text" class="form-control" placeholder="Dog Name" />
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <label for="Breed" class="form-label">Breed</label>
      <input type="text" class="form-control" placeholder="Breed" />
    </div>
    <div class="col-sm-6">
      <label for="Colour" class="form-label">Colour</label>
      <input type="text" class="form-control" placeholder="Colour" />
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <label for="Date Of Birth" class="form-label">Date Of Birth</label>
      <input type="date" class="form-control" placeholder="Date Of Birth" />
    </div>
  </div>
  <div class="row">
    <label for="Gender" class="form-label">Gender</label>
    <div class="col-sm-6">
      <div class="form-check">
        <input class="form-check-input" type="radio" name="" value="" />
        <label class="form-check-label" for="Male">
          Male
        </label>
      </div>
    </div>
    <div class="col-sm-6">
      <div class="form-check">
        <input class="form-check-input" type="radio" name="" value="" />
        <label class="form-check-label" for="Female">
          Female
        </label>
      </div>
    </div>
  </div>
  <div class="row">
    <label for="Spade/Neutered" class="form-label">Spade/Neutered</label>
    <div class="col-sm-4">
      <div class="form-check">
        <input class="form-check-input" type="radio" name="" value="" />
        <label class="form-check-label" for="Spade">
          Spade
        </label>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-check">
        <input class="form-check-input" type="radio" name="" value="" />
        <label class="form-check-label" for="Neutered">
          Neutered
        </label>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-check">
        <input class="form-check-input" type="radio" name="" value="" />
        <label class="form-check-label" for="No">
          No
        </label>
      </div>
    </div>
  </div>
  <div class="row">
    <label for="Designation" class="form-label">Designation</label>
    <div class="col-sm-4">
      <div class="form-check">
        <input class="form-check-input" type="radio" name="" value="" />
        <label class="form-check-label" for="None">
          None
        </label>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-check">
        <input class="form-check-input" type="radio" name="" value="" />
        <label class="form-check-label" for="Dangerous">
          Dangerous
        </label>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-check">
        <input class="form-check-input" type="radio" name="" value="" />
        <label class="form-check-label" for="Service">
          Service
        </label>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <label for="Rabies Tag Number" class="form-label">Rabies Tag Number</label>
      <input type="text" class="form-control" placeholder="Rabies Tag Number" />
    </div>
    <div class="col-sm-6">
      <label for="Rabies Expiry" class="form-label">Rabies Expiry</label>
      <input type="date" class="form-control" placeholder="Rabies Expiry" />
    </div>
  </div>
