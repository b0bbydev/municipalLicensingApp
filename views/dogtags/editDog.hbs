<h2 class="text-center mt-2">Edit Dog</h2>
<form class="row g-5 m-auto" method="POST">
  <div class="col-md-7 m-auto mt-5">
    <!-- check for error messages in the session -->
    {{#if message}}
      <div class="alert alert-danger">
        {{message}}
      </div>
    {{/if}}
    <h4>Dog Information</h4>
    <hr />
    <!-- Tag Number -->
    <div class="row">
      <div class="col-sm-6">
        <label for="Tag Number" class="form-label">Tag Number*</label>
        <input
          type="number"
          class="form-control"
          placeholder="Tag Number"
          name="tagNumber"
          value="{{dogInfo.tagNumber}}"
          required
        />
      </div>
      <!-- Tag Required -->
      <div class="col-sm-6">
        <label for="Tag Required" class="form-label">Reason Tag No Longer
          Required</label>
        <select class="form-select" name="tagRequired">
          {{#if dogInfo.tagRequired}}
            <option
              value="{{dogInfo.tagRequired}}"
              disabled
              selected
            >{{dogInfo.tagRequired}}</option>
          {{else}}
            <option disabled selected>Tag Required...</option>
          {{/if}}
          {{#each tagRequiredOptions}}
            {{#if this.isDisabled}}
              <option
                value="{{this.dropdownValue}}"
                disabled
              >{{this.dropdownValue}}</option>
            {{else}}
              <option
                value="{{this.dropdownValue}}"
              >{{this.dropdownValue}}</option>
            {{/if}}
          {{/each}}
        </select>
      </div>
    </div>
    <div class="row">
      <!-- Vendor -->
      <div class="col-sm-6">
        <label for="Vendor" class="form-label">Vendor</label>
        <select class="form-select" name="vendor">
          {{#if dogInfo.vendor}}
            <option
              value="{{dogInfo.vendor}}"
              disabled
              selected
            >{{dogInfo.vendor}}</option>
          {{else}}
            <option disabled selected>Tag Required...</option>
          {{/if}}
          {{#each vendorValues}}
            {{#if this.isDisabled}}
              <option
                value="{{this.dropdownValue}}"
                disabled
              >{{this.dropdownValue}}</option>
            {{else}}
              <option
                value="{{this.dropdownValue}}"
              >{{this.dropdownValue}}</option>
            {{/if}}
          {{/each}}
        </select>
      </div>
      <!-- Dog Name -->
      <div class="col-sm-6">
        <label for="Dog Name" class="form-label">Dog Name</label>
        <input
          type="text"
          class="form-control"
          placeholder="Dog Name"
          name="dogName"
          pattern="[^()/><\][\\\x22;|]+"
          title="No special characters!"
          value="{{dogInfo.dogName}}"
          maxlength="20"
        />
      </div>
    </div>
    <!-- Breed -->
    <div class="row">
      <div class="col-sm-6">
        <label for="Breed" class="form-label">Breed</label>
        <input
          type="text"
          class="form-control"
          placeholder="Breed"
          name="breed"
          pattern="[^()><\][\\\x22;|]+"
          title="No special characters!"
          value="{{dogInfo.breed}}"
          maxlength="25"
        />
      </div>
      <!-- Colour -->
      <div class="col-sm-6">
        <label for="Colour" class="form-label">Colour</label>
        <input
          type="text"
          class="form-control"
          placeholder="Colour"
          name="colour"
          pattern="[^()><\][\\\x22,;|]+"
          title="No special characters!"
          value="{{dogInfo.colour}}"
          maxlength="25"
        />
      </div>
    </div>
    <!-- Date of Birth -->
    <div class="row">
      <div class="col-sm-12">
        <label for="Date Of Birth" class="form-label">Date Of Birth</label>
        <input
          type="date"
          class="form-control"
          placeholder="Date Of Birth"
          name="dateOfBirth"
          value="{{dogInfo.dateOfBirth}}"
        />
      </div>
    </div>
    <!-- Gender -->
    <div class="row">
      <label for="Gender" class="form-label">Gender</label>
      <!-- Male -->
      <div class="col-sm-6">
        <div class="form-check">
          <label class="form-check-label" for="Male">
            Male
          </label>
          {{#ifCond dogInfo.gender "===" "M"}}
            <input
              class="form-check-input"
              type="radio"
              name="gender"
              value="M"
              checked
            />
          {{else}}
            <input
              class="form-check-input"
              type="radio"
              name="gender"
              value="M"
            />
          {{/ifCond}}
        </div>
      </div>
      <!-- Female -->
      <div class="col-sm-6">
        <div class="form-check">
          <label class="form-check-label" for="Female">
            Female
          </label>
          {{#ifCond dogInfo.gender "===" "F"}}
            <input
              class="form-check-input"
              type="radio"
              name="gender"
              value="F"
              checked
            />
          {{else}}
            <input
              class="form-check-input"
              type="radio"
              name="gender"
              value="F"
            />
          {{/ifCond}}
        </div>
      </div>
    </div>
    <!-- Spade/Neutered -->
    <div class="row">
      <label for="Spade/Neutered" class="form-label">Spade/Neutered</label>
      <!-- Spade -->
      <div class="col-sm-4">
        <div class="form-check">
          <label class="form-check-label" for="Spade">
            Spade
          </label>
          {{#ifCond dogInfo.spade "===" "Spade"}}
            <input
              class="form-check-input"
              type="radio"
              name="spade"
              value="Spade"
              checked
            />
          {{else}}
            <input
              class="form-check-input"
              type="radio"
              name="spade"
              value="Spade"
            />
          {{/ifCond}}
        </div>
      </div>
      <!-- Neutered -->
      <div class="col-sm-4">
        <div class="form-check">
          <label class="form-check-label" for="Neutered">
            Neutered
          </label>
          {{#ifCond dogInfo.spade "===" "Neutered"}}
            <input
              class="form-check-input"
              type="radio"
              name="spade"
              value="Neutered"
              checked
            />
          {{else}}
            <input
              class="form-check-input"
              type="radio"
              name="spade"
              value="Neutered"
            />
          {{/ifCond}}
        </div>
      </div>
      <!-- No -->
      <div class="col-sm-4">
        <div class="form-check">
          <label class="form-check-label" for="No">
            No
          </label>
          {{#ifCond dogInfo.spade "===" "No"}}
            <input
              class="form-check-input"
              type="radio"
              name="spade"
              value="No"
              checked
            />
          {{else}}
            <input
              class="form-check-input"
              type="radio"
              name="spade"
              value="No"
            />
          {{/ifCond}}
        </div>
      </div>
    </div>
    <!-- Designation -->
    <div class="row">
      <label for="Designation" class="form-label">Designation</label>
      <!-- Service -->
      <div class="col-sm-4">
        <div class="form-check">
          <label class="form-check-label" for="Service">
            Service
          </label>
          {{#ifCond dogInfo.designation "===" "Service"}}
            <input
              class="form-check-input"
              type="radio"
              name="designation"
              value="Service"
              checked
            />
          {{else}}
            <input
              class="form-check-input"
              type="radio"
              name="designation"
              value="Service"
            />
          {{/ifCond}}
        </div>
      </div>
      <!-- Dangerous -->
      <div class="col-sm-4">
        <div class="form-check">
          <label class="form-check-label" for="Dangerous">
            Dangerous
          </label>
          {{#ifCond dogInfo.designation "===" "Dangerous"}}
            <input
              class="form-check-input"
              type="radio"
              name="designation"
              value="Dangerous"
              checked
            />
          {{else}}
            <input
              class="form-check-input"
              type="radio"
              name="designation"
              value="Dangerous"
            />
          {{/ifCond}}
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-check">
          <label class="form-check-label" for="None">
            None
          </label>
          {{#ifCond dogInfo.designation "===" "None"}}
            <input
              class="form-check-input"
              type="radio"
              name="designation"
              value="None"
              checked
            />
          {{else}}
            <input
              class="form-check-input"
              type="radio"
              name="designation"
              value="None"
            />
          {{/ifCond}}
        </div>
      </div>
    </div>
    <div class="row">
      <!-- Rabies Tag Number -->
      <div class="col-sm-6">
        <label for="Rabies Tag Number" class="form-label">Rabies Tag Number</label>
        <input
          type="text"
          class="form-control"
          name="rabiesTagNumber"
          placeholder="Rabies Tag Number"
          value="{{dogInfo.rabiesTagNumber}}"
        />
      </div>
      <!-- Rabies Expiry -->
      <div class="col-sm-6">
        <label for="Rabies Expiry" class="form-label">Rabies Expiry</label>
        <input
          type="date"
          class="form-control"
          name="rabiesExpiry"
          placeholder="Rabies Expiry"
          value="{{dogInfo.rabiesExpiry}}"
        />
      </div>
    </div>
    <div class="row">
      <!-- Vet Office -->
      <div class="col">
        <label for="Vet Office" class="form-label">Vet Office</label>
        <input
          type="text"
          class="form-control"
          placeholder="Vet Office"
          name="vetOffice"
          pattern="[^()/><\][\\\x22;|]+"
          title="No special characters!"
          value="{{dogInfo.vetOffice}}"
          maxlength="50"
        />
      </div>
    </div>
    <div class="row">
      <!-- Notes -->
      <div class="col">
        <label for="Notes" class="form-label">Notes</label>
        <textarea
          type="text"
          name="notes"
          class="form-control"
          pattern="[^()/><\][\\\x22;|]+"
          title="No special characters!"
          maxlength="255"
        >{{dogInfo.notes}}</textarea>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <button
          id="submitButton"
          class="btn btn-primary mt-2"
          type="submit"
        >Submit</button>
      </div>
    </div>
  </div>
</form>