<div class="content">
  <h2 id="title">Owner Details</h2>
  <div class="row">
    <div class="col">
      <a
        href="/dogtags/addDog/{{ownerID}}"
        class="btn btn-sm btn-primary"
      >Register Dog to Owner</a>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2">
      <strong>Owner: {{ownerName}}</strong>
    </div>
  </div>

  <section class="row">
    <div class="col-12">
      <table
        class="sortable table table-sm table-bordered table-striped table-hover"
      >
        <thead>
          <tr>
            <th>Dog Name</th>
            <th>Dog Breed</th>
            <th>Issue Date</th>
            <th>Expiry Date</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each data}}
            <tr>
              <td>{{this.dogName}}</td>
              <td>{{this.breed}}</td>
              <td>{{this.issueDate}}</td>
              <td>{{this.expiryDate}}</td>
              <td><a href="#" class="btn btn-primary">Renew</a></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </section>
</div>