              <td>{{this.vendor}}</td>
              <td>{{this.notes}}</td>
              <td>{{formatDate this.lastModified}}</td>
              <td>{{this.action}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    {{/group}}
  </div>
</section>