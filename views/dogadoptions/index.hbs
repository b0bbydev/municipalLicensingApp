<h2 class="text-center mt-2">Dog Adoptions</h2>
<h4>Filtering</h4>
<div class="row">
  <div class="col">
    <form class="mb-0" method="GET">
      <select
        class="form-select-sm"
        id="filterCategory"
        title="Category To Filter By"
        name="filterCategory"
        required
      >
        {{#if filterCategory}}
          <option
            value="{{filterCategory}}"
            selected
          >{{filterCategory}}</option>
        {{else}}
          <option value="" disabled selected>Filter By...</option>
        {{/if}}
        {{#each filterOptions}}
          {{#if this.isDisabled}}
            <option
              value="{{this.dropdownValue}}"
              disabled
            >{{this.dropdownValue}}</option>
          {{else}}
            <option
              value="{{this.dropdownValue}}"
            >{{this.dropdownValue}}</option>
          {{/if}}
        {{/each}}
      </select>
      <!-- filterValue input -->
      <input
        name="filterValue"
        id="filterValue"
        class="form-control-sm"
        pattern="^[^\x27\x22;=_()*&%$#!<>\/\^\\]*$"
        title="No special characters!"
        placeholder="Search..."
        value="{{filterValue}}"
      />
      <button
        id="filterButton"
        class="btn btn-sm btn-primary"
        type="submit"
      >Search</button>
      <a
        id="filterButton"
        href="/dogAdoptions"
        class="btn btn-sm btn-secondary"
        type="submit"
      >Reset</a>
    </form>
  </div>
</div>
<div class="row">
  <div class="col-1 pe-0 me-0" style="width: 15%">
    <span id="quickLinks">Quick Links:</span>
    <a
      class="user-select-none"
      id="getExpiredTags"
      href="/dogAdoptions/dogs"
    >View Dogs</a>
  </div>
</div>
<div class="row mb-1">
  <div class="col">
    {{#if queryCount}}
      <strong class="float-start mt-2">{{queryCount}}</strong>
    {{/if}}
  </div>
  <div class="col-md-auto pe-0">
    <a
      href="/dogAdoptions/addAdopter"
      class="btn btn-sm btn-primary float-end"
    >Add Adopter</a>
  </div>
  <div class="col-md-auto">

    <a href="/dogAdoptions/addDog" class="btn btn-sm btn-primary float-end">Add
      Dog</a>
  </div>
</div>

<!-- check for error messages in the session -->
{{#if message}}
  <div class="alert alert-danger">
    {{message}}
  </div>
{{/if}}

<!-- Table -->
<table
  class="table table-responsive table-bordered table-striped table-hover sortable"
>
  <thead>
    <tr>
      <th>Adopter Name</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    {{#each data}}
      <tr>
        <td class="tableLink">
          <a
            class="stretched-link"
            id="ownerLink"
            href="/dogAdoptions/adopter/{{this.adopterID}}"
            title="View Adopter Profile"
          >{{this.firstName}} {{this.lastName}}</a></td>
        <td>{{this.phoneNumber}}</td>
        <td>{{this.email}}</td>
        {{#each addresses}}
          <td>{{this.streetNumber}}
            {{this.streetName}},
            {{this.town}}
            {{this.postalCode}}</td>
        {{/each}}
        <td style="width: 19%;">
          <a
            href="/dogAdoptions/editAdopter/{{this.adopterID}}"
            class="btn btn-sm btn-secondary"
          >Edit</a>
          |
          <button
            data-bs-toggle="modal"
            data-bs-target="#adoptionModal-{{this.adopterID}}"
            class="btn btn-sm btn-primary"
          >Register Dog to Adopter</button>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
<!-- Modal -->
{{#each data}}
  <div
    class="modal fade"
    id="adoptionModal-{{this.adopterID}}"
    tabindex="-1"
    aria-labelledby="adopterModal"
    aria-hidden="true"
  >
    <form method="POST">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Register Dog to
              <strong>{{this.firstName}} {{this.lastName}}</strong></h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <div class="row">
              <div class="col">
                <!-- Table -->
                <div class="table-container">
                  <table
                    class="table table-responsive table-bordered table-striped table-hover sortable"
                  >
                    <thead>
                      <tr>
                        <th></th>
                        <th>Dog Name</th>
                        <th>Date Of Adoption</th>
                        <th>Dog Breed</th>
                        <th>Colour</th>
                        <th>Gender</th>
                      </tr>
                    </thead>
                    <tbody class="table-group-divider">
                      <!-- Need to get ID from form to update, but don't need user to see it - set display: none; -->
                      <div class="row" style="display: none;">
                        <div class="col">
                          <label for="Adopter ID" class="form-label">Adopter ID</label>
                          <input
                            type="number"
                            class="form-control"
                            name="adopterID"
                            value="{{this.adopterID}}"
                            readonly
                          />
                        </div>
                      </div>
                      {{#each ../adoptedDogs}}
                        {{#unless this.adopterAdopterID}}
                          <tr>
                            <td>
                              <div class="form-check">
                                <input
                                  class="form-check-input"
                                  type="radio"
                                  name="selection"
                                  id="selection-{{this.adoptedDogID}}"
                                  value="{{this.adoptedDogID}}"
                                />
                                <label
                                  class="form-check-label"
                                  for="selection-{{this.adoptedDogID}}"
                                ></label>
                              </div>
                            </td>
                            <td>{{this.dogName}}</td>
                            <td>{{this.dateOfAdoption}}</td>
                            <td>{{this.breed}}</td>
                            <td>{{this.colour}}</td>
                            <td>{{this.gender}}</td>
                          </tr>
                        {{/unless}}
                      {{/each}}
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >Close</button>
            <button type="submit" class="btn btn-primary">Submit Adoption</button>
          </div>
        </div>
      </div>
    </form>
  </div>
{{/each}}
<nav id="pagination">
  <ul class="pagination pagination-sm">
    {{#if paginate.hasPreviousPages}}
      <li class="page-item">
        <a class="page-link" href="{{prev}}">Prev</a>
      </li>
    {{/if}}
    {{#each pages}}
      <li class="page-item">
        <a class="page-link {{#contains this.url ../currentPage}}active pagination-color {{/contains}}" href="{{this.url}}">{{this.number}}</a>
      </li>
    {{/each}}
    {{#if hasMorePages}}
      <li class="page-item">
        <a class="page-link" href="{{paginate.href}}">Next</a>
      </li>
    {{/if}}
  </ul>
</nav>