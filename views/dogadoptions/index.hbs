<h2 class="text-center mt-2">Dog Adoptions</h2>
<h4>Filtering</h4>
<div class="row">
  <div class="col">
    <form class="mb-0" method="GET">
      <select
        class="form-select-sm"
        id="filterCategory"
        title="Category To Filter By"
        name="filterCategory"
        required
      >
        {{#if filterCategory}}
          <option
            value="{{filterCategory}}"
            selected
          >{{filterCategory}}</option>
        {{else}}
          <option value="" disabled selected>Filter By...</option>
        {{/if}}
        {{#each filterOptions}}
          {{#if this.isDisabled}}
            <option
              value="{{this.dropdownValue}}"
              disabled
            >{{this.dropdownValue}}</option>
          {{else}}
            <option
              value="{{this.dropdownValue}}"
            >{{this.dropdownValue}}</option>
          {{/if}}
        {{/each}}
      </select>
      <!-- filterValue input -->
      <input
        name="filterValue"
        id="filterValue"
        class="form-control-sm"
        pattern="^[^\x27\x22;=_()*&%$#!<>\/\^\\]*$"
        title="No special characters!"
        placeholder="Search..."
        value="{{filterValue}}"
      />
      <button
        id="filterButton"
        class="btn btn-sm btn-primary"
        type="submit"
      >Search</button>
      <a
        id="filterButton"
        href="/dogAdoptions"
        class="btn btn-sm btn-secondary"
        type="submit"
      >Reset</a>
    </form>
  </div>
</div>
<div class="row mb-1">
    <div class="col">
    {{#if queryCount}}
      <strong class="float-start mt-2">{{queryCount}}</strong>
    {{/if}}
    <a href="/dogAdoptions/addAdopter" class="btn btn-sm btn-primary float-end">Add Adopter</a>
  </div>
</div>

<!-- check for error messages in the session -->
{{#if message}}
  <div class="alert alert-danger">
    {{message}}
  </div>
{{/if}}

<!-- Table -->
<table
  class="table table-responsive table-bordered table-striped table-hover sortable"
>
  <thead>
    <tr>
      <th>Adopter Name</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    {{#each data}}
      <tr>
        <td class="tableLink">
          <a
            class="stretched-link"
            id="ownerLink"
            href="/dogAdoptions/adopter/{{this.adopterID}}"
            title="View Adopter Profile"
          >{{this.firstName}} {{this.lastName}}</a></td>
        <td>{{this.phoneNumber}}</td>
        <td>{{this.email}}</td>
        {{#each adopterAddresses}}
          <td>{{this.streetNumber}}
            {{this.streetName}},
            {{this.town}}
            {{this.postalCode}}</td>
        {{/each}}
        <td>
          <a
            href="/dogAdoptions/editAdopter/{{this.adopterID}}"
            class="btn btn-sm btn-secondary"
          >Edit</a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
<nav id="pagination">
  <ul class="pagination pagination-sm">
    {{#if paginate.hasPreviousPages}}
      <li class="page-item">
        <a class="page-link" href="{{prev}}">Prev</a>
      </li>
    {{/if}}
    {{#each pages}}
      <li class="page-item">
        <a class="page-link {{#contains this.url ../currentPage}}active pagination-color {{/contains}}" href="{{this.url}}">{{this.number}}</a>
      </li>
    {{/each}}
    {{#if hasMorePages}}
      <li class="page-item">
        <a class="page-link" href="{{paginate.href}}">Next</a>
      </li>
    {{/if}}
  </ul>
</nav>