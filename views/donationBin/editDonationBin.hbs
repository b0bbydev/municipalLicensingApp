<h2 class="text-center mt-2">Edit Donation Bin</h2>
<form class="row g-5 m-auto" method="POST">
  <div class="col-md-7 m-auto mt-5">
    <!-- check for error messages in the session -->
    {{#if message}}
      <div class="alert alert-danger">
        {{message}}
      </div>
    {{/if}}
    <h4 class="mt-2">Donation Bin Information</h4>
    <hr />
    <div class="row">
      <!-- License Number -->
      <div class="col-sm-4">
        <label for="License Number" class="form-label">License Number</label>
        <input
          type="text"
          class="form-control"
          placeholder="License Number"
          name="licenseNumber"
          pattern="[^()/><\][\\\x22;|]+"
          title="No special characters!"
          value="{{formData.licenseNumber}}"
          maxlength="50"
        />
      </div>
      <!-- Street Number -->
      <div class="col-sm-4">
        <label for="Street Number" class="form-label">Street Number*</label>
        <input
          type="number"
          class="form-control"
          placeholder="Street Number"
          name="streetNumber"
          value="{{formData.streetNumber}}"
          required
        />
      </div>
      <!-- Street Name -->
      <div class="col-sm-4">
        <label for="Street Name" class="form-label">Street Name*</label>
        <input
          class="form-control"
          name="streetName"
          list="streets"
          placeholder="Street Name..."
          value="{{formData.streetName}}"
          required
        />
        <datalist id="streets">
          {{#each streets}}
            {{#if this.isDisabled}}
              <option
                value="{{this.dropdownValue}}"
                disabled
              >{{this.dropdownValue}}</option>
            {{else}}
              <option
                value="{{this.dropdownValue}}"
              >{{this.dropdownValue}}</option>
            {{/if}}
          {{/each}}
        </datalist>
      </div>
    </div>
    <div class="row">
      <!-- Town -->
      <div class="col-sm-6">
        <label for="Town" class="form-label">Town</label>
        <input
          type="text"
          class="form-control"
          placeholder="Town"
          name="town"
          pattern="[^()/><\][\\\x22;|]+"
          title="No special characters!"
          value="{{formData.town}}"
          maxlength="30"
        />
      </div>
      <!-- Postal Code -->
      <div class="col-sm-6">
        <label for="Postal Code" class="form-label">Postal Code</label>
        <input
          type="text"
          class="form-control"
          placeholder="Postal Code"
          name="postalCode"
          pattern="[^()/><\][\\\x22;|]+"
          title="No special characters!"
          value="{{formData.postalCode}}"
          maxlength="15"
        />
      </div>
    </div>
    <div class="row">
      <!-- Issue Date -->
      <div class="col-sm-6">
        <label for="Issue Date" class="form-label">Issue Date</label>
        <input
          type="date"
          class="form-control"
          placeholder="Issue Date"
          name="issueDate"
          value="{{formData.issueDate}}"
        />
      </div>
      <!-- Expiry Date -->
      <div class="col-sm-6">
        <label for="Expiry Date" class="form-label">Expiry Date</label>
        <input
          type="date"
          class="form-control"
          placeholder="Expiry Date"
          name="expiryDate"
          value="{{formData.expiryDate}}"
        />
      </div>
    </div>
    <div class="row">
      <!-- Colour -->
      <div class="col-sm-6">
        <label for="Colour" class="form-label">Colour</label>
        <input
          type="text"
          placeholder="Colour"
          class="form-control"
          name="colour"
          pattern="[^()/><\][\\\x22;|]+"
          title="No special characters!"
          value="{{{formData.colour}}}"
          maxlength="25"
        />
      </div>
      <!-- Material -->
      <div class="col-sm-6">
        <label for="Material" class="form-label">Material</label>
        <input
          type="text"
          placeholder="Material"
          class="form-control"
          name="material"
          pattern="[^()/><\][\\\x22;|]+"
          title="No special characters!"
          value="{{{formData.material}}}"
          maxlength="25"
        />
      </div>
    </div>
    <div class="row">
      <!-- Pickup Schedule -->
      <div class="col">
        <label for="Pickup Schedule" class="form-label">Pickup Schedule*</label>
        <textarea
          type="text"
          name="pickupSchedule"
          class="form-control"
          pattern="[^()/><\][\\\x22;|]+"
          title="No special characters!"
          maxlength="255"
          required
        >{{formData.pickupSchedule}}</textarea>
      </div>
    </div>
    <div class="row">
      <!-- Items Collected -->
      <div class="col">
        <label for="Items Collected" class="form-label">Items Collected</label>
        <textarea
          type="text"
          name="itemsCollected"
          class="form-control"
          pattern="[^()/><\][\\\x22;|]+"
          title="No special characters!"
          maxlength="255"
        >{{formData.itemsCollected}}</textarea>
      </div>
    </div>
    <div class="row">
      <!-- Notes -->
      <div class="col">
        <label for="Notes" class="form-label">Notes</label>
        <textarea
          type="text"
          name="notes"
          class="form-control"
          pattern="[^()/><\][\\\x22;|]+"
          title="No special characters!"
          maxlength="255"
        >{{formData.notes}}</textarea>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <button
          id="submitButton"
          class="btn btn-primary mt-2"
          type="submit"
        >Submit</button>
      </div>
    </div>
  </div>
</form>