<h2 class="text-center mt-1">Donation Bin Licensing</h2>
<div class="row">
  <div class="col mb-1">
    {{#if queryCount}}
      <strong class="float-start mt-2">{{queryCount}}</strong>
    {{/if}}
  </div>
</div>

<!-- check for error messages in the session -->
{{#if message}}
  <div class="alert alert-danger">
    {{message}}
  </div>
{{/if}}

<!-- Charity Table -->
<table
  class="table table-sm table-responsive table-bordered table-striped table-hover sortable"
>
  <thead>
    <tr>
      <th>Name</th>
      <th>Registration #</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>Organization Type</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    {{#each data}}
      <tr>
        <td><a id="ownerLink" href="/donationBin/bins/{{this.donationBinID}}">
            {{this.charityName}}</a></td>
        <td>{{this.registrationNumber}}</td>
        <td>{{this.phoneNumber}}</td>
        <td>{{this.email}}</td>
        <td>{{this.organizationType}}</td>
        <td>{{this.email}}</td>
        <td><a
            class="btn btn-sm btn-secondary"
            href="/donationBin/editCharity/{{this.donationBinCharityID}}"
          >Edit</a></td>
      </tr>
    {{/each}}
  </tbody>
</table>