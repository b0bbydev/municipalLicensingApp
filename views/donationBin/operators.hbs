<h2 class="text-center mt-1">Donation Bin Operators</h2>
<div class="row">
  <div class="col mb-1">
    {{#if queryCount}}
      <strong class="float-start mt-1">{{queryCount}}</strong>
    {{/if}}
    <a
      href="/donationBin/addOperator"
      class="btn btn-sm btn-primary float-end"
    >Add Donation Bin Operator</a>
  </div>
</div>

<!-- check for error messages in the session -->
{{#if message}}
  <div class="alert alert-danger">
    {{message}}
  </div>
{{/if}}

<!-- Table -->
<table class="table table-sm table-bordered table-striped table-hover sortable">
  <thead>
    <tr>
      <th>Operator Name</th>
      <th>Operator Address</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>License Number</th>
      <th>Photo ID</th>
      <th>Charity Information</th>
      <th>Site Plan</th>
      <th>Certificate of Insurance</th>
      <th>Owner Consent</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
      <tr>
        <td><a
            id="ownerLink"
            href="/donationBin/bins/{{this.donationBinOperatorID}}"
          >{{this.firstName}}
            {{this.lastName}}</a></td>
        {{#each donationBinOperatorAddresses}}
          <td>{{this.streetNumber}}
            {{this.streetName}},
            {{this.town}}
            {{this.postalCode}}</td>
        {{/each}}
        <td>{{this.phoneNumber}}</td>
        <td>{{this.email}}</td>
        <td>{{this.licenseNumber}}</td>
        <td>{{this.photoID}}</td>
        <td>{{this.charityInformation}}</td>
        <td>{{this.sitePlan}}</td>
        <td>{{this.certificateOfInsurance}}</td>
        <td>{{this.ownerConsent}}</td>
        <td><a
            class="btn btn-sm btn-secondary"
            href="/donationBin/editOperator/{{this.donationBinOperatorID}}"
          >Edit</a></td>
      </tr>
    {{/each}}
  </tbody>
</table>
<nav id="pagination">
  <ul class="pagination pagination-sm">
    {{#if paginate.hasPreviousPages}}
      <li class="page-item"><a class="page-link" href="{{prev}}">Prev</a></li>
    {{/if}}
    {{#each pages}}
      <li class="page-item">
        <a class="page-link" href="{{this.url}}">{{this.number}}</a></li>
    {{/each}}
    {{#if hasMorePages}}
      <li class="page-item"><a
          class="page-link"
          href="{{paginate.href}}"
        >Next</a></li>
    {{/if}}
  </ul>
</nav>