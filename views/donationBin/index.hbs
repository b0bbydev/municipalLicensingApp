<h2 class="text-center mt-1">Donation Bin Licensing</h2>
<div class="row">
  <div class="col mb-1">
    {{#if queryCount}}
      <strong class="float-start mt-2">{{queryCount}}</strong>
    {{/if}}
    <a
      href="/donationBin/addDonationBin"
      class="btn btn-sm btn-primary float-end"
    >Add Donation Bin</a>
  </div>
</div>

<!-- check for error messages in the session -->
{{#if message}}
  <div class="alert alert-danger">
    {{message}}
  </div>
{{/if}}

<!-- Table -->
<table class="table table-sm table-bordered table-striped table-hover sortable">
  <thead>
    <tr>
      <th>Bin Address</th>
      <th>Issue Date</th>
      <th>Expiry Date</th>
      <th>Items Collected</th>
      <th>Pickup Schedule</th>
      <th>Colour</th>
      <th>Material</th>
      <th>Notes</th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
      <tr>
        {{#each donationBinAddresses}}
          <td><a
              id="ownerLink"
              href="/donationBin/bin/{{this.donationBinID}}"
            >{{this.streetNumber}}
              {{this.streetName}},
              {{this.town}}
              {{this.postalCode}}</a></td>
        {{/each}}
        <td>{{this.issueDate}}</td>
        <td>{{this.expiryDate}}</td>
        <td>{{this.itemsCollected}}</td>
        <td>{{this.pickupSchedule}}</td>
        <td>{{this.colour}}</td>
        <td>{{this.material}}</td>
        <td>{{this.notes}}</td>
      </tr>
      <!-- Modal -->
      <div
        class="modal fade"
        id="donationBinRenewModal"
        tabindex="-1"
        aria-labelledby="donationBinRenewModal"
        aria-hidden="true"
      >
        <form method="POST">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Donation Bin Renewal</h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                <div class="row">
                  <div class="col">
                    <label for="Charity ID" class="form-label">Charity ID</label>
                    <input
                      class="form-control"
                      placeholder="Charity ID"
                      value="{{this.donationBinCharityID}}"
                      name="donationBinCharityID"
                      readonly
                    />
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <label for="Charity Name" class="form-label">Charity Name</label>
                    <input
                      class="form-control"
                      placeholder="Charity Name"
                      value="{{this.charityName}}"
                      readonly
                    />
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >Close</button>
                <button type="submit" class="btn btn-primary">Submit Renewal</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    {{/each}}
  </tbody>
</table>
<nav id="pagination">
  <ul class="pagination pagination-sm">
    {{#if paginate.hasPreviousPages}}
      <li class="page-item"><a class="page-link" href="{{prev}}">Prev</a></li>
    {{/if}}
    {{#each pages}}
      <li class="page-item">
        <a class="page-link" href="{{this.url}}">{{this.number}}</a></li>
    {{/each}}
    {{#if hasMorePages}}
      <li class="page-item"><a
          class="page-link"
          href="{{paginate.href}}"
        >Next</a></li>
    {{/if}}
  </ul>
</nav>