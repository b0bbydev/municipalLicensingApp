<h2 class="text-center mt-1">Donation Bins</h2>
<div class="row">
  <div class="col mb-1">
    {{#if queryCount}}
      <strong class="float-start mt-1">{{queryCount}}</strong>
    {{/if}}
    <a
      href="/donationBin/addDonationBin"
      class="btn btn-sm btn-primary float-end"
    >Add Donation Bin</a>
  </div>
</div>

<!-- check for error messages in the session -->
{{#if message}}
  <div class="alert alert-danger">
    {{message}}
  </div>
{{/if}}

<!-- Table -->
<table class="table table-sm table-bordered table-striped table-hover sortable">
  <thead>
    <tr>
      <th>Items Collected</th>
      <th>Pickup Schedule</th>
      <th>Colour</th>
      <th>Material</th>
      <th>Notes</th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
      <tr>
        <td>{{this.itemsCollected}}</td>
        <td>{{this.pickupSchedule}}</td>
        <td>{{this.colour}}</td>
        <td>{{this.material}}</td>
        <td>{{this.notes}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
<nav id="pagination">
  <ul class="pagination pagination-sm">
    {{#if paginate.hasPreviousPages}}
      <li class="page-item"><a class="page-link" href="{{prev}}">Prev</a></li>
    {{/if}}
    {{#each pages}}
      <li class="page-item">
        <a class="page-link" href="{{this.url}}">{{this.number}}</a></li>
    {{/each}}
    {{#if hasMorePages}}
      <li class="page-item"><a
          class="page-link"
          href="{{paginate.href}}"
        >Next</a></li>
    {{/if}}
  </ul>
</nav>