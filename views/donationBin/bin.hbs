<h2 class="text-center mt-1">Donation Bin</h2>

<!-- check for error messages in the session -->
{{#if message}}
  <div class="alert alert-danger">
    {{message}}
  </div>
{{/if}}

<!-- Proprty Owner Table -->
<div class="row">
  <h4>Property Owners</h4>
  <div class="col mb-1">
    {{#if queryCount}}
      <strong class="float-start mt-1">{{queryCount}}</strong>
    {{/if}}
    <a
      href="/donationBin/addPropertyOwner"
      class="btn btn-sm btn-primary float-end"
    >Add Property Owner</a>
  </div>
</div>
<table class="table table-sm table-bordered table-striped table-hover sortable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
    </tr>
  </thead>
  <tbody>
    {{#each propertyOwners}}
      <tr>
        <td>{{this.firstName}} {{this.lastName}}</td>
        {{#each donationBinPropertyOwnerAddresses}}
          <td>{{this.streetNumber}}
            {{this.streetName}},
            {{this.town}}
            {{this.postalCode}}</td>
        {{/each}}
      </tr>
    {{/each}}
  </tbody>
</table>
<nav id="pagination">
  <ul class="pagination pagination-sm">
    {{#if paginate.hasPreviousPages}}
      <li class="page-item"><a class="page-link" href="{{prev}}">Prev</a></li>
    {{/if}}
    {{#each pages}}
      <li class="page-item">
        <a class="page-link" href="{{this.url}}">{{this.number}}</a></li>
    {{/each}}
    {{#if hasMorePages}}
      <li class="page-item"><a
          class="page-link"
          href="{{paginate.href}}"
        >Next</a></li>
    {{/if}}
  </ul>
</nav>

