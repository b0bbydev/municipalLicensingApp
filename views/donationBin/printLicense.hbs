<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{title}}</title>
    <!-- favicon -->
    <link rel="icon" type="image/png" href="/images/bwg-logo.png" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
    />
    <!-- font -->
    <link
      href="https://fonts.googleapis.com/css2?family=Gabriela&display=swap"
      rel="stylesheet"
    />
    <!-- printLicense css -->
    <link rel="stylesheet" href="/stylesheets/printLicense.css" />
  </head>
  <body>
    <!-- check for error messages in the session -->
    {{#if message}}
      <div class="alert alert-danger">
        {{message}}
      </div>
    {{else}}
      <div class="row mb-5">
        <div class="col-sm-6">
          <img
            src="/images/bwg-background.gif"
            alt="bwg-logo"
            class="mt-2"
            height="65"
            width="400"
          />
        </div>
        <!-- License Type -->
        <div class="col-sm-4">
          <p class="fs-2 mt-2">Donation Bin Licence</p>
        </div>
      </div>
      <!-- License Info -->
      <div class="row py-1">
        <div class="col-sm-2 mt-1 ms-2">
          <p class="fs-3">Location: </p>
        </div>
        <div class="col mt-1 ms-2">
          <p id="normal" class="fs-4 mt-1">{{data.streetNumber}}
            {{data.streetName}},
            {{data.town}}</p>
        </div>
      </div>
      <div class="row py-1">
        <div class="col-sm-2 mt-1 ms-2">
          <p class="fs-3">License #: </p>
        </div>
        <div class="col mt-1 ms-2">
          <p id="normal" class="fs-4 mt-1">{{data.licenseNumber}}</p>
        </div>
      </div>
      <div class="row py-1">
        <div class="col-sm-2 mt-1 ms-2">
          <p class="fs-3">Issue Date: </p>
        </div>
        <div class="col mt-1 ms-2">
          <p id="normal" class="fs-4 mt-1">{{data.issueDate}}</p>
        </div>
      </div>
      <div class="row py-1">
        <div class="col-sm-3 mt-1 ms-2 w-10 mb-5">
          <p class="fs-3">Expiration Date: </p>
        </div>
        <div class="col mt-1 ms-2">
          <p id="normal" class="fs-4 mt-1">{{data.expiryDate}}</p>
        </div>
      </div>
      <!-- specific by-law info -->
      <div class="row py-3">
        <div class="col">
          <p id="normal" class="px-5">This permit is issued under the Town of
            Bradford West Gwillimbury's Donation Bin By-law 2015-93.</p>
          <p id="normal" class="px-5">To report contraventions of this by-law
            please contact the Enforcement Division at 905-775-5366. To view a
            copy of the By-law please visit the Town's website at
            <span id="underline">www.townofbwg.com.</span></p>
        </div>
      </div>
      <div class="row pe-3 mt-5 float-end">
        <div class="col mt-5">
          <strong id="normal">____________________________</strong>
          <p id="normal">Lauren Fortune, Licensing Officer</p>
        </div>
      </div>
    {{/if}}
  </body>
</html>