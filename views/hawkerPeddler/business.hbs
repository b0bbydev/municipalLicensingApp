<h2 class="text-center mt-2">Hawker & Peddler Business</h2>

<!-- check for error messages in the session -->
{{#if message}}
  <div class="alert alert-danger">
    {{message}}
  </div>
{{/if}}

<!-- Property Owners Table -->
<div class="row">
  <h4 class="mb-0">Property Owners</h4>
  <div class="col mb-1">
    {{#if propertyOwnersCount}}
      <strong class="float-start mt-2">{{propertyOwnersCount}}</strong>
    {{/if}}
    <a
      href="/hawkerPeddler/addPropertyOwner"
      class="btn btn-sm btn-primary float-end"
    >Add A Property Owner</a>
  </div>
</div>
<table
  class="table table-responsive table-bordered table-striped table-hover sortable"
>
  <thead>
    <tr>
      <th>Property Owner Name</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    {{#each propertyOwners}}
      <tr>
        <td>{{this.firstName}} {{this.lastName}}</td>
        <td>{{this.phoneNumber}}</td>
        <td>{{this.email}}</td>
        {{#each hawkerPeddlerPropertyOwnerAddresses}}
          <td class="tableLink">
            <a
              class="stretched-link"
              id="historyLink"
              href="/hawkerPeddler/propertyOwnerAddressHistory/{{this.hawkerPeddlerPropertyOwnerID}}"
              title="View Address History"
            >{{this.streetNumber}}
              {{this.streetName}},
              {{this.town}}
              {{this.postalCode}}</a></td>
        {{/each}}
        <td><a
            class="btn btn-sm btn-secondary"
            href="/hawkerPeddler/editPropertyOwner/{{this.hawkerPeddlerPropertyOwnerID}}"
          >Edit</a></td>
      </tr>
    {{/each}}
  </tbody>
</table>

<!-- Operators Table -->
<div class="row">
  <h4 class="mb-0">Operators</h4>
  <div class="col mb-1">
    {{#if applicantsCount}}
      <strong class="float-start mt-2">{{applicantsCount}}</strong>
    {{/if}}
    <a
      href="/hawkerPeddler/addOperator"
      class="btn btn-sm btn-primary float-end"
    >Add An Operator</a>
  </div>
</div>
<table
  class="table table-responsive table-bordered table-striped table-hover sortable"
>
  <thead>
    <tr>
      <th>Operator Name</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    {{#each applicants}}
      <tr>
        <td>{{this.firstName}} {{this.lastName}}</a></td>
        <td>{{this.phoneNumber}}</td>
        <td>{{this.email}}</td>
        {{#each hawkerPeddlerApplicantAddresses}}
          <td class="tableLink">
            <a
              class="stretched-link"
              id="historyLink"
              href="/hawkerPeddler/applicantAddressHistory/{{this.hawkerPeddlerApplicantID}}"
              title="View Address History"
            >{{this.streetNumber}}
              {{this.streetName}},
              {{this.town}}
              {{this.postalCode}}</a></td>
        {{/each}}
        <td style="width: 10%;"><a
            class="btn btn-sm btn-secondary my-1"
            data-bs-toggle="modal"
            data-bs-target="#hawkerPeddlerRenewModal-{{this.hawkerPeddlerApplicantID}}"
          >Renew</a>
          |
          <a
            class="btn btn-sm btn-secondary"
            href="/hawkerPeddler/editOperator/{{this.hawkerPeddlerApplicantID}}"
          >Edit</a>
          <!-- Print to Filehold -->
          <a
            href="/hawkerPeddler/printLicense/{{this.hawkerPeddlerBusinessID}}"
            title="Print License"
          ><i class="icon-blue bi bi-printer-fill ms-1"></i></a></td>
      </tr>
      <!-- Renew Modal -->
      <div
        class="modal fade"
        id="hawkerPeddlerRenewModal-{{this.hawkerPeddlerApplicantID}}"
        tabindex="-1"
        aria-labelledby="Hawker Peddler Renewal Modal"
        aria-hidden="true"
      >
        <form method="POST">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title">Renew Operator License</h5>
                <button
                  type="button"
                  class="btn-close"
                  data-bs-dismiss="modal"
                  aria-label="Close"
                ></button>
              </div>
              <div class="modal-body">
                <!-- Need to get ID from form to update, but don't need user to see it - set display: none; -->
                <div class="row" style="display: none;">
                  <div class="col">
                    <label
                      for="Hawker Peddler Operator ID"
                      class="form-label"
                    >Hawker Peddler Operator ID</label>
                    <input
                      class="form-control"
                      placeholder="Hawker Peddler Operator ID"
                      value="{{this.hawkerPeddlerApplicantID}}"
                      name="hawkerPeddlerApplicantID"
                      readonly
                    />
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <label for="Operator Name" class="form-label">Operator Name</label>
                    <input
                      class="form-control"
                      placeholder="Operator Name"
                      value="{{this.firstName}} {{this.lastName}}"
                      readonly
                    />
                  </div>
                </div>
                <div class="row">
                  <div class="col">
                    <label for="License Number" class="form-label">License
                      Number</label>
                    <input
                      class="form-control"
                      placeholder="New License Number"
                      name="licenseNumber"
                    />
                  </div>
                </div>
                <p class="mt-4 mb-0 fst-italic">This license will expire on
                  <strong>{{formatDate ../modalExpiryDate}}</strong>
                  after renewal</p>
              </div>
              <div class="modal-footer">
                <button
                  type="button"
                  class="btn btn-secondary"
                  data-bs-dismiss="modal"
                >Close</button>
                <button type="submit" class="btn btn-primary">Submit Renewal</button>
              </div>
            </div>
          </div>
        </form>
      </div>
    {{/each}}
  </tbody>
</table>