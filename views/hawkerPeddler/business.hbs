<h2 class="text-center mt-2">Hawker & Peddler Business</h2>

<!-- check for error messages in the session -->
{{#if message}}
  <div class="alert alert-danger">
    {{message}}
  </div>
{{/if}}

<!-- Property Owners Table -->
<div class="row">
  <h4 class="mb-0">Property Owners</h4>
  <div class="col mb-1">
    {{#if propertyOwnersCount}}
      <strong class="float-start mt-2">{{propertyOwnersCount}}</strong>
    {{/if}}
    <a
      href="/hawkerPeddler/addPropertyOwner"
      class="btn btn-sm btn-primary float-end"
    >Add A Property Owner</a>
  </div>
</div>
<table
  class="table table-responsive table-bordered table-striped table-hover sortable"
>
  <thead>
    <tr>
      <th>Property Owner Name</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    {{#each propertyOwners}}
      <tr>
        <td>{{this.firstName}} {{this.lastName}}</td>
        <td>{{this.phoneNumber}}</td>
        <td>{{this.email}}</td>
        {{#each hawkerPeddlerPropertyOwnerAddresses}}
          <td class="tableLink">
            <a
              class="stretched-link"
              id="historyLink"
              href="/hawkerPeddler/propertyOwnerAddressHistory/{{this.hawkerPeddlerPropertyOwnerID}}"
              title="View Address History"
            >{{this.streetNumber}}
              {{this.streetName}},
              {{this.town}}
              {{this.postalCode}}</a></td>
        {{/each}}
        <td><a
            class="btn btn-sm btn-secondary"
            href="/hawkerPeddler/editPropertyOwner/{{this.hawkerPeddlerPropertyOwnerID}}"
          >Edit</a></td>
      </tr>
    {{/each}}
  </tbody>
</table>

<!-- Operators Table -->
<div class="row">
  <h4 class="mb-0">Operators</h4>
  <div class="col mb-1">
    {{#if operatorsCount}}
      <strong class="float-start mt-2">{{operatorsCount}}</strong>
    {{/if}}
    <a
      href="/hawkerPeddler/addOperator"
      class="btn btn-sm btn-primary float-end"
    >Add An Operator</a>
  </div>
</div>
<table
  class="table table-responsive table-bordered table-striped table-hover sortable"
>
  <thead>
    <tr>
      <th>Operator Name</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>Address</th>
      <th style="width: 15%;">Actions</th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    {{#each operators}}
      <tr>
        <td>{{this.firstName}} {{this.lastName}}</a></td>
        <td>{{this.phoneNumber}}</td>
        <td>{{this.email}}</td>
        {{#each hawkerPeddlerOperatorAddresses}}
          <td class="tableLink">
            <a
              class="stretched-link"
              id="historyLink"
              href="/hawkerPeddler/operatorAddressHistory/{{this.hawkerPeddlerOperatorID}}"
              title="View Address History"
            >{{this.streetNumber}}
              {{this.streetName}},
              {{this.town}}
              {{this.postalCode}}</a></td>
        {{/each}}
        <td style="width: 10%;">
          <a
            class="btn btn-sm btn-secondary"
            href="/hawkerPeddler/editOperator/{{this.hawkerPeddlerOperatorID}}"
          >Edit</a>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>