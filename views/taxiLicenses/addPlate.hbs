            </div>
          </div>
        </div>
      </div>
      <div class="col">
        <!-- Insurance -->
        <label for="Insurance" class="form-label">Insurance</label>
        <div class="row">
          <!-- Yes -->
          <div class="col-sm-3">
            <div class="form-check">
              <label class="form-check-label" for="Insurance">
                Yes
              </label>
              {{#ifCond formData.insurance "===" "Yes"}}
                <input
                  class="form-check-input"
                  type="radio"
                  name="insurance"
                  value="Yes"
