<h2 class="text-center mt-1">Taxi Licenses</h2>
<h4>Filtering</h4>
<form class="mb-0" method="GET">
  <select
    class="form-select-sm"
    id="filterCategory"
    title="filterSelect"
    name="filterCategory"
    required
  >
    {{#if filterCategory}}
      <option value="{{filterCategory}}" selected>{{filterCategory}}</option>
    {{else}}
      <option value="" disabled selected>Filter By...</option>
    {{/if}}
    {{#each filterOptions}}
      {{#if this.isDisabled}}
        <option
          value="{{this.dropdownValue}}"
          disabled
        >{{this.dropdownValue}}</option>
      {{else}}
        <option value="{{this.dropdownValue}}">{{this.dropdownValue}}</option>
      {{/if}}
    {{/each}}
  </select>
  <!-- filterValue input -->
  <input
    name="filterValue"
    id="filterValue"
    class="form-control-sm"
    pattern="^[^\x27\x22;=_()*&%$#!<>\/\^\\]*$"
    title="No special characters!"
    placeholder="Search..."
    value="{{filterValue}}"
  />
  <button
    id="filterButton"
    class="btn btn-sm btn-primary"
    type="submit"
  >Search</button>
  <a
    id="filterButton"
    href="/taxiLicenses"
    class="btn btn-sm btn-secondary"
    type="submit"
  >Reset</a>
</form>
<div class="row">
  <div class="col mb-1">
    <h4 class="mb-0 mt-1">Brokers</h4>
    {{#if queryCount}}
      <strong class="float-start mt-2">{{queryCount}}</strong>
    {{/if}}
    <a
      href="/taxiLicenses/addBroker"
      class="btn btn-sm btn-primary float-end"
    >Add A Broker</a>
  </div>
</div>

<!-- check for error messages in the session -->
{{#if message}}
  <div class="alert alert-danger">
    {{message}}
  </div>
{{/if}}

<!-- Table -->
<table class="table table-sm table-bordered table-striped table-hover sortable">
  <thead>
    <tr>
      <th>Company Name</th>
      <th>Owner Name</th>
      <th>Phone Number</th>
      <th>Address</th>
      <th>License Number</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
      <tr>
        <td><a
            id="ownerLink"
            href="/taxiLicenses/broker/{{this.taxiBrokerID}}"
          >{{this.companyName}}</a></td>
        <td>{{this.ownerName}}</td>
        <td>{{this.phoneNumber}}</td>
        {{#each taxiBrokerAddresses}}
          <td>{{this.streetNumber}}
            {{this.streetName}},
            {{this.town}}
            {{this.postalCode}}</td>
        {{/each}}
        <td>{{this.licenseNumber}}</td>
        <td class="text-nowrap"><a
            class="btn btn-sm btn-secondary"
            href="#"
          >Renew</a>
          |
          <a
            class="btn btn-sm btn-secondary"
            href="/taxiLicenses/editBroker/{{this.taxiBrokerID}}"
          >Edit</a>
          |
          <a
            class="btn btn-sm btn-secondary"
            data-bs-toggle="modal"
            data-bs-target="#taxiLicenseDocumentationModal-{{this.taxiBrokerID}}"
          >Documentation</a></td>
      </tr>
      <!-- Modal -->
      <div
        class="modal fade"
        id="taxiLicenseDocumentationModal-{{this.taxiBrokerID}}"
        tabindex="-1"
        aria-labelledby="Taxi License Modal"
        aria-hidden="true"
      >
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title">Documentation</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <div class="row">
                <div class="col">
                  <strong>Police VSC: </strong>
                </div>
                <div class="col float-end">
                  <p>{{this.policeVSC}}</p>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <strong>Citizenship: </strong>
                </div>
                <div class="col float-end">
                  <p>{{this.citizenship}}</p>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <strong>Photo ID: </strong>
                </div>
                <div class="col float-end">
                  <p>{{this.photoID}}</p>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <strong>Drivers Abstract: </strong>
                </div>
                <div class="col float-end">
                  <p>{{this.driversAbstract}}</p>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <strong>Certificate Of Insurance: </strong>
                </div>
                <div class="col float-end">
                  <p>{{this.certificateOfInsurance}}</p>
                </div>
              </div>
              <div class="row">
                <div class="col">
                  <strong>Zoning Approval: </strong>
                </div>
                <div class="col float-end">
                  <p>{{this.zoningApproval}}</p>
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button
                type="button"
                class="btn btn-secondary"
                data-bs-dismiss="modal"
              >Close</button>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </tbody>
</table>
<nav id="pagination">
  <ul class="pagination pagination-sm">
    {{#if paginate.hasPreviousPages}}
      <li class="page-item"><a class="page-link" href="{{prev}}">Prev</a></li>
    {{/if}}
    {{#each pages}}
      <li class="page-item">
        <a class="page-link" href="{{this.url}}">{{this.number}}</a></li>
    {{/each}}
    {{#if hasMorePages}}
      <li class="page-item"><a
          class="page-link"
          href="{{paginate.href}}"
        >Next</a></li>
    {{/if}}
  </ul>
</nav>