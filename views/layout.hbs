<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{title}}</title>
    <!-- favicon -->
    <link rel="icon" type="image/png" href="/images/bwg-logo.png" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
    />
    <!-- custom css -->
    <link rel="stylesheet" href="/stylesheets/main.css" />
    <!-- custom js -->
    <script src="/js/scripts.js"></script>
    <!-- sorttable -->
    <script src="/js/sorttable.js"></script>
  </head>
  <div class="side-nav">
    <div class="nav-img">
      <a href="/">
        <img src="/images/bwg-logo.png" alt="bwg-logo" />
      </a>
    </div>
    <div class="usernameDiv">
      {{#if email}}
        <p class="text-center">
          <i class="icon-blue icon-large bi bi-person-fill"></i>
          Current User:
          {{email}}
        </p>
      {{/if}}
    </div>
    {{#ifCond admin "||" auth}}
      <div class="menu-item">
        <a href="/dogtags">
          <div class="menu-text">
            <i class="icon-large icon-blue bi bi-stack"></i>
            Dog Tag Licenses
          </div>
        </a>
      </div>
      <div class="menu-item">
        <a href="/dropdownManager">
          <div class="menu-text">
            <i class="icon-blue icon-large bi bi-menu-button-fill"></i>
            Dropdown Manager
          </div>
        </a>
      </div>
      <div class="menu-item">
        <a href="/policies">
          <div class="menu-text">
            <i class="icon-large icon-blue bi bi-stack"></i>
            Policies & Procedures
          </div>
        </a>
      </div>
    {{/ifCond}}
    <!-- added logout class to anchor to bottom of page -->
    <div class="menu-item logout">
      <a href="/logout">
        <div class="menu-text">
          <i class="icon-large icon-blue bi bi-box-arrow-in-left"></i>
          Logout
        </div>
      </a>
    </div>
  </div>

  {{{body}}}

  <!-- Copyright Section-->
  <div class="footer text-center footer-center text-white footer-color">
    <small>Copyright &copy; Town of Bradford West Gwillimbury</small>
  </div>
</html>