<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{title}}</title>
    <!-- favicon -->
    <link rel="icon" type="image/png" href="/images/bwg-logo.png" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
    />
    <!-- custom css -->
    <link rel="stylesheet" href="/stylesheets/main.css" />
    <!-- custom js -->
    <script src="/js/scripts.js"></script>
    <!-- sorttable -->
    <script src="/js/sorttable.js"></script>
  </head>
  <div class="container-fluid">
    <div class="row flex-nowrap">
      <div
        class="col-auto col-md-3 col-xl-2 px-0"
        style="border-right: 1px solid #dedede;"
      >
        <div
          class="d-flex flex-column align-items-center align-items-sm-start px-2 pt-2 min-vh-100"
        >
          <div class="nav-img text-center pt-3 pb-3 w-100">
            <a href="/">
              <img src="/images/bwg-logo.png" alt="bwg-logo" />
            </a>
          </div>
          {{#if email}}
            <p class="text-center fs-6">
              <i class="icon-blue icon-large bi bi-person-fill"></i>
              Current User:
              {{lowercase email}}
            </p>
          {{/if}}
          <ul
            class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start w-100"
          >
            <!-- Back navigation -->
            {{#ifCond baseUrl "===" indexUrl}}
              <li class="nav-item-back w-100 p-1">
                <a
                  onclick="window.history.back()"
                  class="nav-link align-middle ps-3"
                >
                  <i class="fs-4 icon-blue bi bi-arrow-return-left"></i>
                  <span class="ms-1 d-none d-sm-inline">Back</span>
                </a>
              </li>
            {{/ifCond}}
            <!-- Home -->
            <li class="nav-item-home w-100 p-1">
              <a href="/" class="nav-link align-middle ps-3">
                <i class="fs-4 icon-blue bi bi-house"></i>
                <span class="ms-1 d-none d-sm-inline">Home</span>
              </a>
            </li>
            {{#includes auth "Admin"}}
              <!-- Admin - force IIS reset -->
              {{! <li class="nav-item-admin w-100 p-1">
                <a href="/iisreset" class="nav-link align-middle ps-3">
                  <i class="fs-4 icon-blue bi bi-person-check"></i>
                  <span class="ms-1 d-none d-sm-inline">Force IIS Reset (Click =
                    Crash)</span>
                </a>
              </li> }}
              <!-- Admin - admin panel -->
              <li class="nav-item-admin w-100 p-1">
                <a href="/admin" class="nav-link align-middle ps-3">
                  <i class="fs-4 icon-blue bi bi-person-check"></i>
                  <span class="ms-1 d-none d-sm-inline">Admin Panel</span>
                </a>
              </li>
              <!-- Admin - dropdown manager -->
              <li class="nav-item w-100 p-1">
                <a href="/dropdownManager" class="nav-link align-middle ps-3">
                  <i class="fs-4 icon-blue bi bi-menu-button-fill"></i>
                  <span class="ms-1 d-none d-sm-inline">Dropdown Manager</span>
                </a>
              </li>
              <!-- Admin - Send SMS -->
              <li class="nav-item w-100 p-1">
                <a href="/sendSms" class="nav-link align-middle ps-3">
                  <i class="fs-4 icon-blue bi bi-chat-dots"></i>
                  <span class="ms-1 d-none d-sm-inline">Send SMS</span>
                </a>
              </li>
            {{/includes}}
            <div
              class="accordion accordion-flush w-100 nav-item"
              id="accordionExample"
            >
              <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                  <button
                    class="accordion-button collapsed"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#collapseOne"
                    aria-expanded="false"
                    aria-controls="collapseOne"
                  >
                    <i class="fs-4 icon-blue bi bi-grid"></i>
                    <span class="dropmenu-text ms-2 d-none d-sm-inline">
                      Licensing Apps</span>
                  </button>
                </h2>
                <div
                  id="collapseOne"
                  class="accordion-collapse collapse"
                  aria-labelledby="headingOne"
                  data-bs-parent="#accordionExample"
                >
                  <ul
                    class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start w-100"
                  >
                    {{#includes auth "Admin"}}
                      <!-- Admin - adult entertainment -->
                      <li class="nav-item w-100 p-1">
                        <a
                          href="/adultEntertainment"
                          class="nav-link align-middle ps-3"
                        >
                          <i class="fs-4 icon-blue bi bi-receipt-cutoff"></i>
                          <span class="ms-1 d-none d-sm-inline">Adult
                            Entertainment Licenses</span>
                        </a>
                      </li>
                      <!-- Admin - Street Closure Permits -->
                      <li class="nav-item w-100 p-1">
                        <a
                          href="/streetClosurePermit"
                          class="nav-link align-middle ps-3"
                        >
                          <i class="fs-4 icon-blue bi bi-signpost"></i>
                          <span class="ms-1 d-none d-sm-inline">Street Closure
                            Permits</span>
                        </a>
                      </li>
                      <!-- Admin - Donation Bin Licenses -->
                      <li class="nav-item w-100 p-1">
                        <a
                          href="/donationBin"
                          class="nav-link align-middle ps-3"
                        >
                          <i class="fs-4 icon-blue bi bi-box2"></i>
                          <span class="ms-1 d-none d-sm-inline">Donation Bin
                            Licenses</span>
                        </a>
                      </li>
                      <!-- Admin - Hawker & Peddler Licenses -->
                      <li class="nav-item w-100 p-1">
                        <a
                          href="/hawkerPeddler"
                          class="nav-link align-middle ps-3"
                        >
                          <i class="fs-4 icon-blue bi bi-shop"></i>
                          <span class="ms-1 d-none d-sm-inline">Hawker & Peddler
                            Licenses</span>
                        </a>
                      </li>
                      <!-- Admin - kennel licenses -->
                      <li class="nav-item-admin w-100 p-1">
                        <a href="/kennels" class="nav-link align-middle ps-3">
                          <i class="fs-4 icon-blue bi bi-postcard"></i>
                          <span class="ms-1 d-none d-sm-inline">Kennel Licenses</span>
                        </a>
                      </li>
                    {{/includes}}
                    <!-- dog auth -->
                    {{#includes auth "Dog Licenses"}}
                      <li class="nav-item w-100 p-1">
                        <a href="/dogtags" class="nav-link align-middle ps-3">
                          <i class="fs-4 icon-blue bi bi-tag"></i>
                          <span class="ms-1 d-none d-sm-inline">Dog Tag Licenses</span>
                        </a>
                      </li>
                    {{/includes}}
                    {{#includes auth "Policies"}}
                      <li class="nav-item-last w-100 p-1">
                        <a href="/policies" class="nav-link align-middle ps-3">
                          <i class="fs-4 icon-blue bi bi-calendar2-minus"></i>
                          <span class="ms-1 d-none d-sm-inline">Policies
                            Management</span>
                        </a>
                      </li>
                    {{/includes}}
                  </ul>
                </div>
              </div>
            </div>
          </ul>
          <div class="nav-item-logout w-100 p-1">
            <a href="/logout" class="nav-link align-middle ps-3">
              <i class="fs-4 icon-blue bi bi-box-arrow-in-left"></i>
              <span class="ms-1 d-none d-sm-inline">Logout</span>
            </a>
          </div>
        </div>
      </div>
      <div class="col py-1">
        {{{body}}}
        {{! <!-- Footer -->
        <footer class="footer py-3 text-center text-white footer-color mt-auto">
          <small>Copyright &copy; Town of Bradford West Gwillimbury</small>
        </footer> }}
      </div>
    </div>
  </div>
</html>