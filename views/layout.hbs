 -->

<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- favicon -->
    <link rel="icon" type="image/png" href="/images/bwg-logo.webp" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.0/font/bootstrap-icons.css"
    />
    <!-- custom css -->
    <link rel="stylesheet" href="/stylesheets/main.css" />
    <!-- custom js -->
    <script src="/js/scripts.js"></script>
    <!-- sorttable -->
    <script src="/js/sorttable.js"></script>

    <title>{{title}}</title>
  </head>
  <div class="container-fluid overflow-hidden">
    <div class="row vh-100 overflow-auto">
      <!-- side nav start -->
      <div
        class="col-2 px-0 d-flex d-none d-xl-block sticky-top border-end border-grey"
      >
        <div
          class="d-flex flex-column flex-row flex-grow-1 align-items-center align-items-start px-0 pt-2 text-dark mb-auto"
        >
          <div class="nav-img text-center py-3 w-100">
            <a title="Home" href="/">
              <img src="/images/bwg-logo.webp" alt="bwg-logo" />
            </a>
          </div>
          {{#if email}}
            <div
              class="row text-center w-100 d-block"
              style="font-size: .93rem;"
            >
              <div class="col-auto">
                <i class="icon-blue icon-large bi bi-person-fill"></i>
                <span>Current User:</span>
              </div>
              <div class="col-auto mb-3">
                <span>{{lowercase email}}</span>
                <span
                  class="dropdown-toggle"
                  type="button"
                  id="dropdownMenu"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                </span>
                <ul
                  class="dropdown-menu"
                  aria-labelledby="dropdownMenu"
                  style="font-size: .93rem;"
                >
                  <li><a class="dropdown-item" href="/logout">Logout</a></li>
                </ul>
              </div>
            </div>
          {{/if}}
          <ul
            class="nav nav-pills flex-sm-column flex-row flex-nowrap flex-shrink-1 flex-sm-grow-0 flex-grow-1 mb-auto justify-content-center align-items-center align-items-sm-start w-100"
            id="menu"
          >
            <!-- Back navigation -->
            {{#unless indexUrl}}
              {{#if isDogAdoptionsDogsPage}}
                <li class="nav-item-back w-100 p-1">
                  <a href="/dogAdoptions" class="nav-link align-middle ps-3">
                    <i class="fs-4 icon-blue bi bi-arrow-return-left"></i>
                    <span class="ms-1 d-none d-sm-inline">Back</span>
                  </a>
                </li>
              {{else if isDogTagsOwnerPage}}
                <li class="nav-item-back w-100 p-1">
                  <a href="/dogtags" class="nav-link align-middle ps-3">
                    <i class="fs-4 icon-blue bi bi-arrow-return-left"></i>
                    <span class="ms-1 d-none d-sm-inline">Back</span>
                  </a>
                </li>
              {{else}}
                <li class="nav-item-back w-100 p-1">
                  <a
                    href="javascript:history.go(-1)"
                    class="nav-link align-middle ps-3"
                  >
                    <i class="fs-4 icon-blue bi bi-arrow-return-left"></i>
                    <span class="ms-1 d-none d-sm-inline">Back</span>
                  </a>
                </li>
              {{/if}}
            {{/unless}}
            <!-- Home -->
            <li class="nav-item-home w-100 p-1">
              <a href="/" class="nav-link align-middle ps-3">
                <i class="fs-4 icon-blue bi bi-house"></i>
                <span class="ms-1 d-none d-sm-inline">Home</span>
              </a>
            </li>
            <div
              class="accordion accordion-flush w-100 nav-item"
              id="adminAccordion"
            >
              {{#includes auth "Admin"}}
                <div class="accordion-item">
                  <h2 class="accordion-header" id="headingOne">
                    <button
                      class="accordion-button collapsed"
                      type="button"
                      data-bs-toggle="collapse"
                      data-bs-target="#collapseOne"
                      aria-expanded="false"
                      aria-controls="collapseOne"
                    >
                      <i class="fs-4 icon-blue bi bi-grid"></i>
                      <span class="dropmenu-text ms-2 d-none d-sm-inline">
                        Admin Apps</span>
                    </button>
                  </h2>
                  <div
                    id="collapseOne"
                    class="accordion-collapse collapse"
                    aria-labelledby="headingOne"
                    data-bs-parent="#adminAccordion"
                  >
                    <ul
                      class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start w-100"
                    >
                      <!-- Admin - admin panel -->
                      <li class="nav-item nav-item-child w-100 p-1">
                        <a href="/admin" class="nav-link align-middle ps-3">
                          <i class="fs-4 icon-blue bi bi-person-check"></i>
                          <span class="ms-1 d-none d-sm-inline">Administrative
                            Panel</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                      <!-- Admin - dropdown manager -->
                      <li class="nav-item nav-item-child w-100 p-1">
                        <a
                          href="/dropdownManager"
                          class="nav-link align-middle ps-3"
                        >
                          <i class="fs-4 icon-blue bi bi-menu-button-fill"></i>
                          <span class="ms-1 d-none d-sm-inline">Dropdown Manager</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                      <!-- Admin - Developer Documentation -->
                      <li class="nav-item-last nav-item-child w-100 p-1">
                        <a
                          href="https://Filehold.townofbwg.com/FH/FileHold/WebClient/ViewerForm.aspx?docId=211755&ui=lock"
                          target="_blank"
                          class="nav-link align-middle ps-3"
                        >
                          <i class="fs-4 icon-blue bi bi-journal-code"></i>
                          <span class="ms-1 d-none d-sm-inline">Developer Docs</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                      <!-- Admin - Dell Warrantly Lookup -->
                      <li class="nav-item-last nav-item-child w-100 p-1">
                        <a
                          href="/dellLookup"
                          class="nav-link align-middle ps-3"
                        >
                          <i class="fs-4 icon-blue bi bi-pc-display"></i>
                          <span class="ms-1 d-none d-sm-inline">Dell Warrantly
                            Lookup</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                    </ul>
                  </div>
                </div>
              {{/includes}}
              {{#includes auth "Enforcement"}}
                <div class="accordion-item">
                  <h2 class="accordion-header" id="headingTwo">
                    <button
                      class="accordion-button collapsed"
                      type="button"
                      data-bs-toggle="collapse"
                      data-bs-target="#collapseTwo"
                      aria-expanded="false"
                      aria-controls="collapseTwo"
                    >
                      <i class="fs-4 icon-blue bi bi-grid"></i>
                      <span class="dropmenu-text ms-2 d-none d-sm-inline">
                        Licensing Apps
                      </span>
                    </button>
                  </h2>
                  <div
                    id="collapseTwo"
                    class="accordion-collapse collapse"
                    aria-labelledby="headingTwo"
                    data-bs-parent="#adminAccordion"
                  >
                    <ul
                      class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start w-100"
                    >
                      <!-- Enforcement - Adult Entertainment -->
                      <li class="nav-item nav-item-child w-100 p-1">
                        <a
                          href="/adultEntertainment"
                          class="nav-link align-middle ps-3"
                        >
                          <i class="fs-4 icon-blue bi bi-receipt-cutoff"></i>
                          <span class="ms-1 d-none d-sm-inline">Adult
                            Entertainment</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                      <!-- Enforcement - Donation Bin Licenses -->
                      <li class="nav-item nav-item-child w-100 p-1">
                        <a
                          href="/donationBin"
                          class="nav-link align-middle ps-3"
                        >
                          <i class="fs-4 icon-blue bi bi-box2"></i>
                          <span class="ms-1 d-none d-sm-inline">Donation Bins</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                      <!-- Enforcement - Dogtag Licenses -->
                      <li class="nav-item-last nav-item-child w-100 p-1">
                        <a href="/dogtags" class="nav-link align-middle ps-3">
                          <i class="fs-4 icon-blue bi bi-tag"></i>
                          <span class="ms-1 d-none d-sm-inline">Dog Tags</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                      <!-- Enforcement - Hawker & Peddler Licenses -->
                      <li class="nav-item nav-item-child w-100 p-1">
                        <a
                          href="/hawkerPeddler"
                          class="nav-link align-middle ps-3"
                        >
                          <i class="fs-4 icon-blue bi bi-shop"></i>
                          <span class="ms-1 d-none d-sm-inline">Hawker &
                            Peddlers</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                      <!-- Enforcement - Kennel Licenses -->
                      <li class="nav-item nav-item-child w-100 p-1">
                        <a href="/kennels" class="nav-link align-middle ps-3">
                          <i class="fs-4 icon-blue bi bi-postcard"></i>
                          <span class="ms-1 d-none d-sm-inline">Kennels</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                      <!-- Enforcement - Liquor Licenses -->
                      <li class="nav-item nav-item-child w-100 p-1">
                        <a href="/liquor" class="nav-link align-middle ps-3">
                          <i class="fs-4 icon-blue bi bi-cup-straw"></i>
                          <span class="ms-1 d-none d-sm-inline">Liquor</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                      <!-- Enforcement - Refreshment Vehicle Licenses -->
                      <li class="nav-item nav-item-child w-100 p-1">
                        <a
                          href="/refreshmentVehicles"
                          class="nav-link align-middle ps-3"
                        >
                          <i class="fs-4 icon-blue bi bi-truck-front"></i>
                          <span class="ms-1 d-none d-sm-inline">Refreshment
                            Vehicles</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                      <!-- Enforcement - Taxi Licenses -->
                      <li class="nav-item nav-item-child w-100 p-1">
                        <a
                          href="/taxiLicenses"
                          class="nav-link align-middle ps-3"
                        >
                          <i class="fs-4 icon-blue bi bi-car-front"></i>
                          <span class="ms-1 d-none d-sm-inline">Taxi</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                    </ul>
                  </div>
                </div>
              {{/includes}}
            </div>
            {{#includes auth "Enforcement"}}
              <!-- Enforcement - Street Closure Permits -->
              <li class="nav-item nav-item-child w-100 p-1">
                <a
                  href="/streetClosurePermit"
                  class="nav-link align-middle ps-3"
                >
                  <i class="fs-4 icon-blue bi bi-signpost"></i>
                  <span class="ms-1 d-none d-sm-inline">Street Closures</span>
                  <i
                    class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                  ></i>
                </a>
              </li>
              <!-- Enforcement - POA Matters -->
              <li class="nav-item nav-item-child w-100 p-1">
                <a href="/poaMatters" class="nav-link align-middle ps-3">
                  <i class="fs-4 icon-blue bi bi-bank"></i>
                  <span class="ms-1 d-none d-sm-inline">POA Matters</span>
                  <i
                    class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                  ></i>
                </a>
              </li>
              <!-- Enforcement - Dog Adoptions -->
              <li class="nav-item-last nav-item-child w-100 p-1">
                <a href="/dogAdoptions" class="nav-link align-middle ps-3">
                  <i class="fs-4 icon-blue bi bi-house-heart"></i>
                  <span class="ms-1 d-none d-sm-inline">Dog Adoptions</span>
                  <i
                    class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                  ></i>
                </a>
              </li>
            {{/includes}}
          </ul>
        </div>
      </div>
      <!-- side nav end -->
      <!-- top nav start -->
      <nav
        class="navbar navbar-expand-xl bg-body-tertiary d-flex d-xl-none border-bottom pb-1"
      >
        <div class="container-fluid">
          <div class="nav-img">
            <a title="Home" href="/">
              <img
                src="/images/bwg-logo.webp"
                alt="bwg-logo"
                height="45px"
                width="65px"
              />
            </a>
          </div>
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div
            class="collapse navbar-collapse mt-1"
            id="navbarSupportedContent"
          >
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 border-top mt-1">
              {{#includes auth "Admin"}}
                <li class="nav-item dropdown">
                  <a
                    class="nav-link dropdown-toggle"
                    href="#"
                    role="button"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                  >
                    <i class="fs-4 icon-blue bi bi-grid"></i>
                    Admin Apps
                  </a>
                  <ul class="dropdown-menu" style="font-size: .85rem;">
                    <li><a class="dropdown-item" href="/admin"><i
                          class="icon-blue bi bi-person-check"
                        ></i>
                        Administrative Panel</a></li>
                    <li><a class="dropdown-item" href="/dropdownManager"><i
                          class="icon-blue bi bi-menu-button-fill"
                        ></i>
                        Dropdown Manager</a></li>
                    <li><a
                        class="dropdown-item"
                        href="https://Filehold.townofbwg.com/FH/FileHold/WebClient/ViewerForm.aspx?docId=211755&ui=lock"
                      ><i class="icon-blue bi bi-journal-code"></i>
                        Developer Documentation</a></li>
                  </ul>
                </li>
              {{/includes}}
              {{#includes auth "Enforcement"}}
                <li class="nav-item dropdown">
                  <a
                    class="nav-link dropdown-toggle"
                    href="#"
                    role="button"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                  >
                    <i class="fs-4 icon-blue bi bi-grid"></i>
                    Licensing Apps
                  </a>
                  <ul class="dropdown-menu" style="font-size: .85rem;">
                    <li><a class="dropdown-item" href="/adultEntertainment"><i
                          class="fs-4 icon-blue bi bi-receipt-cutoff"
                        > </i>
                        Adult Entertainment</a></li>
                    <li><a class="dropdown-item" href="/donationBin"><i
                          class="fs-4 icon-blue bi bi-box2"
                        ></i>
                        Donation Bin</a></li>
                    <li><a class="dropdown-item" href="/dogAdoptions"><i
                          class="fs-4 icon-blue bi bi-house-heart"
                        ></i>
                        Dog Adoptions</a></li>
                    <li><a class="dropdown-item" href="/dogtags"><i
                          class="fs-4 icon-blue bi bi-tag"
                        ></i>
                        Dog Tags</a></li>
                    <li><a class="dropdown-item" href="/hawkerPeddler"><i
                          class="fs-4 icon-blue bi bi-shop"
                        ></i>
                        Hawker & Peddler</a></li>
                    <li><a class="dropdown-item" href="/kennels"><i
                          class="fs-4 icon-blue bi bi-postcard"
                        ></i>
                        Kennel</a></li>
                    <li><a class="dropdown-item" href="/liquor"><i
                          class="fs-4 icon-blue bi bi-cup-straw"
                        ></i>
                        Liquor</a></li>
                    <li><a class="dropdown-item" href="/refreshmentVehicles"><i
                          class="fs-4 icon-blue bi bi-truck-front"
                        ></i>
                        Refreshment Vehicle</a></li>
                    <li><a class="dropdown-item" href="/taxiLicenses"><i
                          class="fs-4 icon-blue bi bi-car-front"
                        ></i>
                        Taxi</a></li>
                  </ul>
                </li>
              {{/includes}}
              {{#includes auth "Enforcement"}}
                <li class="nav-item">
                  <a class="nav-link" href="/streetClosurePermit"><i
                      class="fs-4 icon-blue bi bi-signpost"
                    ></i>
                    Street Closures</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/poaMatters"><i
                      class="fs-4 icon-blue bi bi-bank"
                    ></i>
                    POA Matters</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/dogAdoptions"><i
                      class="fs-4 icon-blue bi bi-house-heart"
                    ></i>
                    Dog Adoptions</a>
                </li>
              {{/includes}}
            </ul>
          </div>
        </div>
      </nav>
      <!-- top nav end -->
      <div class="col d-flex flex-column h-sm-100">
        <main class="row overflow-auto mb-5">
          <div class="col">
            {{{body}}}
          </div>
        </main>
        <footer class="row py-3 text-center text-white footer-color mt-auto">
          <div class="col">
            <small>Copyright &copy; Town of Bradford West Gwillimbury</small>
          </div>
        </footer>
      </div>
    </div>
  </div>
  <!-- Bootstrap JS -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"
  ></script>
</html>