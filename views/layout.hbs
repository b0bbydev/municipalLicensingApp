  @author Bobby Jonkman
 -->

<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- favicon -->
    <link rel="icon" type="image/png" href="/images/bwg-logo.webp" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <!-- Bootstrap Icons -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.0/font/bootstrap-icons.css"
    />
    <!-- custom css -->
    <link rel="stylesheet" href="/stylesheets/main.css" />
    <!-- custom js -->
    <script src="/js/scripts.js"></script>
    <!-- sorttable -->
    <script src="/js/sorttable.js"></script>

    <title>{{title}}</title>
  </head>
  <div class="container-fluid overflow-hidden">
    <div class="row vh-100 overflow-auto">
      <div
        class="col-12 col-sm-3 col-xl-2 px-0 d-flex sticky-top"
        style="border-right: 1px solid #dedede;"
      >
        <div
          class="d-flex flex-sm-column flex-row flex-grow-1 align-items-center align-items-sm-start px-0 pt-2"
        >
          <div class="nav-img text-center py-3 w-100">
            <a title="Home" href="/">
              <img src="/images/bwg-logo.webp" alt="bwg-logo" />
            </a>
          </div>
          {{#if email}}
              <div class="row text-center w-100">
                <div class="col">
                    <i class="icon-blue icon-large bi bi-person-fill"></i>
                    <span>Current User:</span>
                </div>
              </div>
              <div class="row text-center w-100 mb-3">
                <div class="col">
                  <span>{{lowercase email}}</span>
                </div>
              </div>
          {{/if}}
          <ul
            class="nav nav-pills flex-sm-column flex-row flex-nowrap flex-shrink-1 flex-sm-grow-0 flex-grow-1 mb-sm-auto mb-0 justify-content-center align-items-center align-items-sm-start w-100"
            id="menu"
          >
            <!-- Back navigation -->
            {{#ifCond baseUrl "===" indexUrl}}
              <li class="nav-item-back w-100 p-1">
                {{#if dogtagUrl}}
                  <a
                    href="/dogtags"
                    class="nav-link align-middle ps-3"
                  >
                {{else}}
                    <a
                      onclick="window.history.back()"
                      class="nav-link align-middle ps-3">
                {{/if}}
                  <i class="fs-4 icon-blue bi bi-arrow-return-left"></i>
                  <span class="ms-1 d-none d-sm-inline">Back</span>
                </a>
              </li>
            {{/ifCond}}
            <!-- Home -->
            <li class="nav-item-home w-100 p-1">
              <a href="/" class="nav-link align-middle ps-3">
                <i class="fs-4 icon-blue bi bi-house"></i>
                <span class="ms-1 d-none d-sm-inline">Home</span>
              </a>
            </li>
            <div
              class="accordion accordion-flush w-100 nav-item"
              id="adminAccordion"
            >
              {{#includes auth "Admin"}}
                <div class="accordion-item">
                  <h2 class="accordion-header" id="headingOne">
                    <button
                      class="accordion-button collapsed"
                      type="button"
                      data-bs-toggle="collapse"
                      data-bs-target="#collapseOne"
                      aria-expanded="false"
                      aria-controls="collapseOne"
                    >
                      <i class="fs-4 icon-blue bi bi-grid"></i>
                      <span class="dropmenu-text ms-2 d-none d-sm-inline">
                        Admin Apps</span>
                    </button>
                  </h2>
                  <div
                    id="collapseOne"
                    class="accordion-collapse collapse"
                    aria-labelledby="headingOne"
                    data-bs-parent="#adminAccordion"
                  >
                    <ul
                      class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start w-100"
                    >
                      <!-- Admin - admin panel -->
                      <li class="nav-item nav-item-child w-100 p-1">
                        <a href="/admin" class="nav-link align-middle ps-3">
                          <i class="fs-4 icon-blue bi bi-person-check"></i>
                          <span class="ms-1 d-none d-sm-inline">Administrative
                            Panel</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                      <!-- Admin - dropdown manager -->
                      <li class="nav-item nav-item-child w-100 p-1">
                        <a
                          href="/dropdownManager"
                          class="nav-link align-middle ps-3"
                        >
                          <i class="fs-4 icon-blue bi bi-menu-button-fill"></i>
                          <span class="ms-1 d-none d-sm-inline">Dropdown Manager</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                      <!-- Admin - Send SMS -->
                      <li class="nav-item-last nav-item-child w-100 p-1">
                        <a href="/sendSms" class="nav-link align-middle ps-3">
                          <i class="fs-4 icon-blue bi bi-chat-dots"></i>
                          <span class="ms-1 d-none d-sm-inline">Send SMS</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                      <!-- Admin - Developer Documentation -->
                      <li class="nav-item-last nav-item-child w-100 p-1">
                        <a
                          href="https://Filehold.townofbwg.com/FH/FileHold/WebClient/ViewerForm.aspx?docId=211755&ui=lock"
                          target="_blank"
                          class="nav-link align-middle ps-3"
                        >
                          <i class="fs-4 icon-blue bi bi-journal-code"></i>
                          <span class="ms-1 d-none d-sm-inline">Developer
                            Documentation</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                    </ul>
                  </div>
                </div>
              {{/includes}}
              {{#includes auth "Enforcement"}}
                <div class="accordion-item">
                  <h2 class="accordion-header" id="headingTwo">
                    <button
                      class="accordion-button collapsed"
                      type="button"
                      data-bs-toggle="collapse"
                      data-bs-target="#collapseTwo"
                      aria-expanded="false"
                      aria-controls="collapseTwo"
                    >
                      <i class="fs-4 icon-blue bi bi-grid"></i>
                      <span class="dropmenu-text ms-2 d-none d-sm-inline">
                        Licensing Apps</span>
                    </button>
                  </h2>
                  <div
                    id="collapseTwo"
                    class="accordion-collapse collapse"
                    aria-labelledby="headingTwo"
                    data-bs-parent="#adminAccordion"
                  >
                    <ul
                      class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start w-100"
                    >
                      <!-- Enforcement - Adult Entertainment -->
                      <li class="nav-item nav-item-child w-100 p-1">
                        <a
                          href="/adultEntertainment"
                          class="nav-link align-middle ps-3"
                        >
                          <i class="fs-4 icon-blue bi bi-receipt-cutoff"></i>
                          <span class="ms-1 d-none d-sm-inline">Adult
                            Entertainment Licenses</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                      <!-- Enforcement - Donation Bin Licenses -->
                      <li class="nav-item nav-item-child w-100 p-1">
                        <a
                          href="/donationBin"
                          class="nav-link align-middle ps-3"
                        >
                          <i class="fs-4 icon-blue bi bi-box2"></i>
                          <span class="ms-1 d-none d-sm-inline">Donation Bin
                            Licenses</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                      <!-- Enforcement - Dogtag Licenses -->
                      <li class="nav-item-last nav-item-child w-100 p-1">
                        <a href="/dogtags" class="nav-link align-middle ps-3">
                          <i class="fs-4 icon-blue bi bi-tag"></i>
                          <span class="ms-1 d-none d-sm-inline">Dog Tag Licenses</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                      <!-- Enforcement - Hawker & Peddler Licenses -->
                      <li class="nav-item nav-item-child w-100 p-1">
                        <a
                          href="/hawkerPeddler"
                          class="nav-link align-middle ps-3"
                        >
                          <i class="fs-4 icon-blue bi bi-shop"></i>
                          <span class="ms-1 d-none d-sm-inline">Hawker & Peddler
                            Licenses</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                      <!-- Enforcement - Kennel Licenses -->
                      <li class="nav-item nav-item-child w-100 p-1">
                        <a href="/kennels" class="nav-link align-middle ps-3">
                          <i class="fs-4 icon-blue bi bi-postcard"></i>
                          <span class="ms-1 d-none d-sm-inline">Kennel Licenses</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                      <!-- Enforcement - Liquor Licenses -->
                      <li class="nav-item nav-item-child w-100 p-1">
                        <a href="/liquor" class="nav-link align-middle ps-3">
                          <i class="fs-4 icon-blue bi bi-cup-straw"></i>
                          <span class="ms-1 d-none d-sm-inline">Liquor Licenses</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                      <!-- Enforcement - Refreshment Vehicle Licenses -->
                      <li class="nav-item nav-item-child w-100 p-1">
                        <a
                          href="/refreshmentVehicles"
                          class="nav-link align-middle ps-3"
                        >
                          <i class="fs-4 icon-blue bi bi-truck-front"></i>
                          <span class="ms-1 d-none d-sm-inline">Refreshment
                            Vehicle Licenses</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                      <!-- Enforcement - Taxi Licenses -->
                      <li class="nav-item nav-item-child w-100 p-1">
                        <a
                          href="/taxiLicenses"
                          class="nav-link align-middle ps-3"
                        >
                          <i class="fs-4 icon-blue bi bi-car-front"></i>
                          <span class="ms-1 d-none d-sm-inline">Taxi Licenses</span>
                          <i
                            class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                          ></i>
                        </a>
                      </li>
                    </ul>
                  </div>
                </div>
              {{/includes}}
            </div>
            {{#includes auth "Enforcement"}}
              <!-- Enforcement - Street Closure Permits -->
              <li class="nav-item nav-item-child w-100 p-1">
                <a
                  href="/streetClosurePermit"
                  class="nav-link align-middle ps-3"
                >
                  <i class="fs-4 icon-blue bi bi-signpost"></i>
                  <span class="ms-1 d-none d-sm-inline">Street Closures</span>
                  <i
                    class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                  ></i>
                </a>
              </li>
              <!-- Enforcement - POA Matters -->
              <li class="nav-item nav-item-child w-100 p-1">
                <a href="/poaMatters" class="nav-link align-middle ps-3">
                  <i class="fs-4 icon-blue bi bi-bank"></i>
                  <span class="ms-1 d-none d-sm-inline">POA Matters</span>
                  <i
                    class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                  ></i>
                </a>
              </li>
            {{/includes}}
            {{#includes auth "Policies"}}
              <!-- Policies - POA Matters -->
              <li class="nav-item nav-item-child w-100 p-1">
                <a href="/policies" class="nav-link align-middle ps-3">
                  <i class="fs-4 icon-blue bi bi-calendar2-minus"></i>
                  <span class="ms-1 d-none d-sm-inline">Policy Management</span>
                  <i
                    class="fs-4 text-white icon-green bi bi-arrow-right-square float-end"
                  ></i>
                </a>
              </li>
            {{/includes}}
          </ul>
          <div class="mt-sm-auto ms-auto ms-sm-0 flex-shrink-1 w-100">
            <div class="nav-item-logout w-100 py-3">
              <a href="/logout" class="nav-link align-middle ps-3">
                <i class="fs-6 icon-blue bi bi-box-arrow-in-left"></i>
                <span class="ms-1 d-none d-sm-inline">Logout</span>
              </a>
            </div>
          </div>
        </div>
      </div>
      <div class="col d-flex flex-column h-sm-100">
        <main class="row overflow-auto mb-5">
          <div class="col">
            {{{body}}}
          </div>
        </main>
        <footer class="row py-3 text-center text-white footer-color mt-auto">
          <div class="col">
            <small>Copyright &copy; Town of Bradford West Gwillimbury</small>
          </div>
        </footer>
      </div>
    </div>
  </div>
  <!-- Bootstrap JS -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"
  ></script>
</html>