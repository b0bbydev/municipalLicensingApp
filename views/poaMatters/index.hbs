<h2 class="text-center mt-1">POA Matters</h2>
<h4>Filtering</h4>
<form class="mb-0" method="GET">
  <select
    class="form-select-sm"
    id="filterCategory"
    title="filterSelect"
    name="filterCategory"
    required
  >
    <option value="" disabled selected>Filter By...</option>
    {{#each dropdownValues}}
      {{#if this.isDisabled}}
        <option
          value="{{this.dropdownValue}}"
          disabled
        >{{this.dropdownValue}}</option>
      {{else}}
        <option value="{{this.dropdownValue}}">{{this.dropdownValue}}</option>
      {{/if}}
    {{/each}}
  </select>
  <!-- filterValue input -->
  <input
    name="filterValue"
    id="filterValue"
    class="form-control-sm"
    pattern="^[^\x27\x22;=_()*&%$#!<>\/\^\\]*$"
    title="No special characters!"
    placeholder="Search..."
    value="{{filterValue}}"
  />
  <button
    id="filterButton"
    class="btn btn-sm btn-primary"
    type="submit"
  >Search</button>
  <a
    id="filterButton"
    href="/poaMatters"
    class="btn btn-sm btn-secondary"
    type="submit"
  >Reset</a>
</form>
<div class="row">
  <div class="col mb-1">
    {{#if queryCount}}
      <strong class="float-start mt-2">{{queryCount}}</strong>
    {{/if}}
    <a
      href="/poaMatters/addPoaMatter"
      class="btn btn-sm btn-primary float-end"
    >Add POA Matter</a>
  </div>
</div>

<!-- check for error messages in the session -->
{{#if message}}
  <div class="alert alert-danger">
    {{message}}
  </div>
{{/if}}

<!-- Table -->
<table class="table table-sm table-bordered table-striped table-hover sortable">
  <thead>
    <tr>
      <th>Info Number</th>
      <th>Date Of Offence</th>
      <th>Date Closed</th>
      <th>Defendant</th>
      <th>POA Type</th>
      <th>Offence</th>
      <th>Offence Location</th>
      <th>Officer</th>
      <th>Comments</th>
      <th>Set Fine</th>
      <th>Fine Assessed</th>
      <th>Amount Paid</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each data}}
      <tr>
        <td>{{this.infoNumber}}</td>
        <td>{{this.dateOfOffence}}</td>
        <td>{{this.dateClosed}}</td>
        <td>{{this.defendantName}}</td>
        <td>{{this.poaType}}</td>
        <td>{{this.offence}}</td>
        {{#each poaMatterLocations}}
          <td>{{this.streetName}}
            {{this.streetNumber}},
            {{this.town}}
            {{this.postalCode}}</td>
        {{/each}}
        <td>{{this.officerName}}</td>
        <td>{{this.comment}}</td>
        <td>{{#if this.setFine}} ${{this.setFine}} {{/if}}</td>
        <td>{{#if this.fineAssessed}} ${{this.fineAssessed}} {{/if}}</td>
        <td>{{#if this.amountPaid}} ${{this.amountPaid}} {{/if}}</td>
        <td><a
            class="btn btn-sm btn-secondary"
            href="/poaMatters/editPoaMatter/{{this.poaMatterID}}"
          >Edit</a>
          |
          <a class="btn btn-sm btn-secondary" href="#">View Trial Dates</a></td>
      </tr>
    {{/each}}
  </tbody>
</table>
<nav id="pagination">
  <ul class="pagination pagination-sm">
    {{#if paginate.hasPreviousPages}}
      <li class="page-item"><a class="page-link" href="{{prev}}">Prev</a></li>
    {{/if}}
    {{#each pages}}
      <li class="page-item">
        <a class="page-link" href="{{this.url}}">{{this.number}}</a></li>
    {{/each}}
    {{#if hasMorePages}}
      <li class="page-item"><a
          class="page-link"
          href="{{paginate.href}}"
        >Next</a></li>
    {{/if}}
  </ul>
</nav>