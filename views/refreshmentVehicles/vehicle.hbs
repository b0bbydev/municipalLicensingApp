<h2 class="text-center mt-1">Refreshment Vehicle Licensing</h2>

<!-- check for error messages in the session -->
{{#if message}}
  <div class="alert alert-danger">
    {{message}}
  </div>
{{/if}}

<!-- Property Owners Table -->
<div class="row">
  <h4>Property Owners</h4>
  <div class="col mb-1">
    {{#if propertyOwnersCount}}
      <strong class="float-start mt-2">{{propertyOwnersCount}}</strong>
    {{/if}}
    <a
      href="/refreshmentVehicles/addPropertyOwner"
      class="btn btn-sm btn-primary float-end"
    >Add Property Owner</a>
  </div>
</div>
<table class="table table-sm table-bordered table-striped table-hover sortable">
  <thead>
    <tr>
      <th>Property Owner Name</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each propertyOwners}}
      <tr>
        <td>{{this.firstName}} {{this.lastName}}</td>
        <td>{{this.phoneNumber}}</td>
        <td>{{this.email}}</td>
        {{#each refreshmentVehiclePropertyOwnerAddresses}}
          <td>{{this.streetNumber}}
            {{this.streetName}},
            {{this.town}}
            {{this.postalCode}}</td>
        {{/each}}
        <td><a
            class="btn btn-sm btn-secondary"
            href="/refreshmentVehicles/editPropertyOwner/{{this.hawkerPeddlerPropertyOwnerID}}"
          >Edit</a></td>
      </tr>
    {{/each}}
  </tbody>
</table>

